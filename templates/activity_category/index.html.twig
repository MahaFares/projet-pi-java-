<!DOCTYPE html>

<title>ActivityCategory index</title>

{% block body %}
    <h1>ActivityCategory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_category in activity_categories %}
            <tr>
                <td>{{ activity_category.id }}</td>
                <td>{{ activity_category.name }}</td>
                <td>{{ activity_category.description }}</td>
                <td>{{ activity_category.icon }}</td>
                <td>
                    <a href="{{ path('app_activity_category_show', {'id': activity_category.id}) }}">show</a>
                    <a href="{{ path('app_activity_category_edit', {'id': activity_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_category_new') }}">Create new</a>
{% endblock %}
