        {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

        <div class="form-group">
            {{ form_label(form.nom, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.nom, { attr: { class: 'form-input' ~ (form.nom.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Ex: Wi-Fi, Piscine, Parking' } }) }}
            {% if form.nom.vars.errors|length > 0 %}
                <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.nom) }}</div>
            {% endif %}
            <small class="text-muted">2 à 100 caractères requis</small>
        </div>

        <div class="form-group">
            {{ form_label(form.description, null, { label_attr: { class: 'form-label' } }) }}
            {{ form_widget(form.description, { attr: { class: 'form-textarea' ~ (form.description.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Description (optionnel)...', rows: 5 } }) }}
            {% if form.description.vars.errors|length > 0 %}
                <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.description) }}</div>
            {% endif %}
        </div>

        <div class="form-actions">
            <button type="submit" class="modern-btn btn-submit"><i class="bi bi-check"></i> {{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('app_equipement_index') }}" class="modern-btn btn-cancel"><i class="bi bi-x"></i> Annuler</a>
        </div>

        {{ form_end(form) }}
