{% extends 'BackOffice/base.html.twig' %}

{% block title %}{{ equipement.nom }} - Admin{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<style>
.show-header { background: linear-gradient(135deg, #0d9488 0%, #0f766e 100%); color: white; padding: 2rem; border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 8px 24px rgba(13, 148, 136, 0.25); }
.show-header h1 { margin: 0; font-size: 1.75rem; font-weight: 700; display: flex; align-items: center; gap: 0.75rem; }
.show-card { background: white; border-radius: 16px; padding: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
.info-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1rem; margin-bottom: 1.5rem; }
.info-item { padding: 1rem; background: #f8fafc; border-radius: 10px; }
.info-item label { font-size: 0.75rem; color: #64748b; text-transform: uppercase; letter-spacing: 0.05em; display: block; margin-bottom: 0.25rem; }
.info-item span { font-weight: 600; color: #0f172a; }
.desc-block { padding: 1rem; background: #f8fafc; border-radius: 10px; color: #475569; line-height: 1.6; white-space: pre-wrap; }
.hebergements-list { display: flex; flex-wrap: wrap; gap: 8px; margin-top: 0.5rem; }
.hebergements-list .badge { font-size: 0.85rem; padding: 0.5rem 0.75rem; }
.bg-teal { background-color: #0d9488; color: white; }
.form-actions { display: flex; gap: 1rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid #e2e8f0; flex-wrap: wrap; }
.modern-btn { padding: 0.75rem 1.5rem; font-weight: 600; border-radius: 10px; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s; }
.btn-primary-custom { background: linear-gradient(135deg, #0d9488, #0f766e); color: white; }
.btn-secondary-custom { background: #f1f5f9; color: #475569; border: 2px solid #e2e8f0; }
.modern-btn:hover { transform: translateY(-2px); }
.icon-badge { width: 64px; height: 64px; border-radius: 16px; background: linear-gradient(135deg, #0d9488, #0f766e); color: white; display: flex; align-items: center; justify-content: center; font-size: 2rem; margin-bottom: 1rem; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {{ include('admin_nav.html.twig') }}

    <div class="show-header">
        <h1><i class="bi bi-gear"></i> {{ equipement.nom }}</h1>
        <p class="mb-0 mt-2 opacity-90">Équipement #{{ equipement.id }}</p>
    </div>

    <div class="show-card">
        <div class="icon-badge"><i class="bi bi-gear-wide-connected"></i></div>
        <div class="info-grid">
            <div class="info-item">
                <label>ID</label>
                <span>#{{ equipement.id }}</span>
            </div>
            <div class="info-item">
                <label>Nom</label>
                <span>{{ equipement.nom }}</span>
            </div>
            <div class="info-item">
                <label>Hébergements associés</label>
                <span>{{ equipement.hebergements|length }}</span>
            </div>
        </div>

        <div class="mb-4">
            <label class="d-block fw-bold text-muted small text-uppercase mb-2">Description</label>
            <div class="desc-block">{{ equipement.description|default('Aucune description') }}</div>
        </div>

        {% if equipement.hebergements|length > 0 %}
        <div class="mb-4">
            <label class="d-block fw-bold text-muted small text-uppercase mb-2">Hébergements ayant cet équipement</label>
            <div class="hebergements-list">
                {% for h in equipement.hebergements %}
                    <span class="badge bg-teal">{{ h.nom }}</span>
                {% endfor %}
            </div>
        </div>
        {% endif %}

        <div class="form-actions">
            <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}" class="modern-btn btn-primary-custom">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_equipement_index') }}" class="modern-btn btn-secondary-custom">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            {{ include('HebergementTemplate/equipement/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
