{% extends 'BackOffice/base.html.twig' %}

{% block title %}Équipements - Admin{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
.eq-mgmt { font-family: 'Plus Jakarta Sans', sans-serif; }
.eq-stats { display: grid; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); gap: 16px; margin-bottom: 24px; }
.stat-box { background: white; border-radius: 16px; padding: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.06); border: 1px solid rgba(0,0,0,0.04); }
.stat-box h4 { font-size: 1.75rem; font-weight: 800; margin: 0 0 4px 0; color: #0f172a; }
.stat-box span { font-size: 0.85rem; color: #64748b; }
.toolbar { margin-bottom: 24px; }
.btn-add { padding: 12px 24px; background: linear-gradient(135deg, #0d9488, #0f766e); color: white; border-radius: 12px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 8px; }
.btn-add:hover { color: white; opacity: 0.95; }
.star-cards { display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 20px; margin-bottom: 24px; }
.star-card { background: white; border-radius: 16px; padding: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.06); border: 1px solid rgba(0,0,0,0.04); transition: transform 0.2s, box-shadow 0.2s; }
.star-card:hover { transform: translateY(-4px); box-shadow: 0 8px 30px rgba(0,0,0,0.1); }
.star-card-icon { width: 48px; height: 48px; border-radius: 12px; background: linear-gradient(135deg, #0d9488, #0f766e); color: white; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; margin-bottom: 16px; }
.star-card h5 { margin: 0 0 8px 0; font-weight: 700; font-size: 1.1rem; color: #0f172a; }
.star-card-desc { font-size: 0.9rem; color: #64748b; margin-bottom: 16px; line-height: 1.5; min-height: 40px; }
.star-card-actions { display: flex; gap: 8px; }
.btn-action { display: inline-flex; align-items: center; gap: 6px; padding: 6px 12px; border-radius: 8px; text-decoration: none; font-size: 0.85rem; transition: all 0.2s; border: 1px solid; }
.btn-action.view { border-color: #16a34a; color: #16a34a; }
.btn-action.view:hover { background: #16a34a; color: white; }
.btn-action.edit { border-color: #2563eb; color: #2563eb; }
.btn-action.edit:hover { background: #2563eb; color: white; }
.table-card { background: white; border-radius: 20px; box-shadow: 0 4px 24px rgba(0,0,0,0.06); overflow: hidden; border: 1px solid rgba(0,0,0,0.04); }
.table-card table { width: 100%; border-collapse: collapse; }
.table-card th { padding: 16px 20px; text-align: left; font-weight: 600; font-size: 0.8rem; color: #64748b; text-transform: uppercase; letter-spacing: 0.05em; background: #f8fafc; border-bottom: 1px solid #e2e8f0; }
.table-card td { padding: 16px 20px; border-bottom: 1px solid #f1f5f9; }
.table-card tr:hover td { background: #fafbfc; }
.section-title { font-size: 1.1rem; font-weight: 700; color: #0f172a; margin: 0 0 16px 0; display: flex; align-items: center; gap: 8px; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4 eq-mgmt">
    {{ include('admin_nav.html.twig') }}
    {% for flash in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">{{ flash }}<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    {% endfor %}
    <div class="eq-stats">
        <div class="stat-box"><h4>{{ equipements|length }}</h4><span>Total Équipements</span></div>
    </div>
    <div class="toolbar">
        <a href="{{ path('app_equipement_new') }}" class="btn-add"><i class="bi bi-plus-circle"></i> Créer un équipement</a>
    </div>

    <h4 class="section-title mt-4"><i class="bi bi-table"></i> Tableau des équipements</h4>
    <div class="table-card">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Nb Hébergements</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for equipement in equipements %}
            <tr>
                <td><strong>#{{ equipement.id }}</strong></td>
                <td>{{ equipement.nom }}</td>
                <td>{{ equipement.description|default('–')|slice(0, 60) }}{% if (equipement.description|default('')|length) > 60 %}…{% endif %}</td>
                <td><span class="badge bg-secondary">{{ equipement.hebergements|length }}</span></td>
                <td>
                    <a href="{{ path('app_equipement_show', {'id': equipement.id}) }}" class="btn-action view"><i class="bi bi-eye"></i> Voir</a>
                    <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}" class="btn-action edit"><i class="bi bi-pencil"></i> Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center text-muted py-5">Aucun équipement trouvé.</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
