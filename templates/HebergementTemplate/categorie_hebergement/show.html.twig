{% extends 'BackOffice/base.html.twig' %}

{% block title %}Catégorie d'hébergement - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>Détails de la catégorie</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie_hebergement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie_hebergement.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie_hebergement.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_categorie_hebergement_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_categorie_hebergement_edit', {'id': categorie_hebergement.id}) }}" class="btn btn-primary ms-2">Modifier</a>
    </div>

    <div class="mt-3">
        {{ include('HebergementTemplate/categorie_hebergement/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
