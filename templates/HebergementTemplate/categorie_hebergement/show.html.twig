{% extends 'BackOffice/base.html.twig' %}

{% block title %}Détails de la Catégorie | EcoTrip Admin{% endblock %}
{% block page_title %}Détails Catégorie{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .cat-card { background: white; border-radius: 24px; box-shadow: 0 10px 40px rgba(0,0,0,0.04); overflow: hidden; }
    .cat-hero { background: linear-gradient(135deg, #10b981, #059669); padding: 60px 40px; color: white; position: relative; }
    .cat-icon-circle { 
        width: 80px; height: 80px; background: rgba(255,255,255,0.2); 
        border: 2px solid rgba(255,255,255,0.4); border-radius: 20px; 
        display: flex; align-items: center; justify-content: center; 
        font-size: 2.5rem; margin-bottom: 24px;
    }
    .detail-item { padding: 30px 40px; }
    .detail-label { font-size: 0.8rem; font-weight: 700; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 8px; }
    .detail-value { font-size: 1.1rem; color: #1e293b; line-height: 1.6; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="{{ path('app_categorie_hebergement_index') }}" class="btn btn-light rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_categorie_hebergement_edit', {'id': categorie_hebergement.id}) }}" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </a>
                </div>
            </div>

            <div class="cat-card border-0">
                <div class="cat-hero">
                    <div class="cat-icon-circle">
                        <i class="bi bi-tag-fill"></i>
                    </div>
                    <h1 class="display-5 fw-bold mb-2">{{ categorie_hebergement.nom }}</h1>
                    <p class="opacity-75 mb-0">Identification de la catégorie #{{ categorie_hebergement.id }}</p>
                </div>
                
                <div class="detail-item">
                    <div class="detail-label">Description de la catégorie</div>
                    <div class="detail-value text-muted">
                        {{ categorie_hebergement.description|nl2br }}
                    </div>
                </div>

                <div class="bg-light p-4 d-flex justify-content-between align-items-center border-top">
                    <div class="text-muted small">
                        <i class="bi bi-calendar-event me-2"></i>Géré par le module Hébergement
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
