{% for categorie_hebergement in categorie_hebergements %}
    <tr>
        <td>
            <div class="d-flex align-items-center">
                <div style="width: 40px; height: 40px; border-radius: 10px; background: linear-gradient(135deg, #3b82f6, #60a5fa); display: flex; align-items: center; justify-content: center; margin-right: 12px; color: white; font-weight: bold;">
                    <i class="bi bi-tag"></i>
                </div>
                <div>
                    <div style="font-weight: 600; color: #0f172a;">{{ categorie_hebergement.nom }}</div>
                    <div style="font-size: 0.75rem; color: #94a3b8;">Catégorie</div>
                </div>
            </div>
        </td>
        <td style="color: #64748b; max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
            {{ categorie_hebergement.description }}
        </td>
        <td class="actions">
            <div class="d-flex gap-1">
                <a href="{{ path('app_categorie_hebergement_show', {'id': categorie_hebergement.id}) }}" class="btn-action view" title="Voir">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_categorie_hebergement_edit', {'id': categorie_hebergement.id}) }}" class="btn-action edit" title="Modifier">
                    <i class="bi bi-pencil"></i>
                </a>
                <form method="post" action="{{ path('app_categorie_hebergement_delete', {'id': categorie_hebergement.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_hebergement.id) }}">
                    <button class="btn-action delete" title="Supprimer">
                        <i class="bi bi-trash"></i>
                    </button>
                </form>
            </div>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="3" class="text-center py-5">
            <div style="color: #94a3b8;">
                <i class="bi bi-inbox fa-3x mb-3"></i>
                <p>Aucune catégorie trouvée.</p>
            </div>
        </td>
    </tr>
{% endfor %}
