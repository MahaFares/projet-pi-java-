{% extends 'base.html.twig' %}

{% block title %}Hébergement - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>Détails du hébergement</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hebergement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ hebergement.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hebergement.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ hebergement.adresse }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ hebergement.ville }}</td>
            </tr>
            <tr>
                <th>NbEtoiles</th>
                <td>{{ hebergement.nbEtoiles }}</td>
            </tr>
            <tr>
                <th>ImagePrincipale</th>
                <td>
                    {% if hebergement.imagePrincipale %}
                        <img src="{{ asset('uploads/' ~ hebergement.imagePrincipale) }}" alt="{{ hebergement.nom }}" style="max-height: 150px; max-width: 250px; object-fit: cover;" />
                    {% else %}
                        <span class="text-muted">Aucune image</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>LabelEco</th>
                <td>{{ hebergement.labelEco }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ hebergement.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ hebergement.longitude }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ hebergement.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_hebergement_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="btn btn-primary ms-2">Modifier</a>
    </div>

    <div class="mt-3">
        {{ include('HebergementTemplate/hebergement/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
