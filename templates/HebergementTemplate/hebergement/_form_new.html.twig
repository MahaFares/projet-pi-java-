{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}, 'multipart': true}) }}
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Informations générales</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom de l\'hébergement', 'required': true}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nbEtoiles, 'Nombre d\'étoiles', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nbEtoiles, {'attr': {'class': 'form-control', 'type': 'number', 'min': '0', 'max': '5'}}) }}
                    {{ form_errors(form.nbEtoiles) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Décrivez votre hébergement en détail...'}}) }}
                {{ form_errors(form.description) }}
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Localisation</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Rue et numéro'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la ville'}}) }}
                    {{ form_errors(form.ville) }}
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.latitude, 'Latitude', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.latitude, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 35.7595', 'step': '0.000001'}}) }}
                    {{ form_errors(form.latitude) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.longitude, 'Longitude', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.longitude, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 10.7969', 'step': '0.000001'}}) }}
                    {{ form_errors(form.longitude) }}
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Médias & Labels</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.imagePrincipale, {'attr': {'class': 'form-control', 'placeholder': 'https://... ou mon-image.jpg'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.labelEco, 'Label écologique', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.labelEco, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Bio, Eco-label'}}) }}
                    {{ form_errors(form.labelEco) }}
                </div>
            </div>
        </div>
    </div>

    {% if form.categorie is defined or form.proprietaire is defined or form.equipements is defined %}
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Associations</h5>
        </div>
        <div class="card-body">
            {% if form.categorie is defined %}
            <div class="mb-3">
                {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.categorie) }}
            </div>
            {% endif %}

            {% if form.proprietaire is defined %}
            <div class="mb-3">
                {{ form_label(form.proprietaire, 'Propriétaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.proprietaire, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.proprietaire) }}
            </div>
            {% endif %}

            {% if form.equipements is defined %}
            <div class="mb-3">
                {{ form_label(form.equipements, 'Équipements', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.equipements, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
                {{ form_errors(form.equipements) }}
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">Statut</h5>
        </div>
        <div class="card-body">
            <div class="form-check form-switch">
                {{ form_widget(form.actif, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.actif, 'Hébergement actif', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
            </div>
        </div>
    </div>

    <div class="d-flex gap-2 mb-5">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-check-circle"></i> {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('app_hebergement_index') }}" class="btn btn-outline-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Annuler
        </a>
    </div>
{{ form_end(form) }}
