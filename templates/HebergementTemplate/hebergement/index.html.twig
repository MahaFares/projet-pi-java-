{% extends 'base.html.twig' %}

{% block title %}Hébergements - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Hébergements</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Étoiles</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hebergement in hebergements %}
            <tr>
                <td>{{ hebergement.id }}</td>
                <td>{{ hebergement.nom }}</td>
                <td>{{ hebergement.adresse }}</td>
                <td>{{ hebergement.ville }}</td>
                <td>{{ hebergement.nbEtoiles }}</td>
                <td>{{ hebergement.actif ? '✓' : '✗' }}</td>
                <td>
                    <a href="{{ path('app_hebergement_show', {'id': hebergement.id}) }}">Voir</a>
                    <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">Aucun hébergement trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hebergement_new') }}" class="btn btn-success">Créer un hébergement</a>
</div>
{% endblock %}
