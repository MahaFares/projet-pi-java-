{% extends 'BackOffice/base.html.twig' %}

{% block title %}Hébergements - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Hébergements</h1>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="q" value="{{ filters.q|default('') }}" class="form-control" placeholder="Recherche (nom/adresse/ville)">
        </div>
        <div class="col-md-2">
            <input type="number" name="minStars" value="{{ filters.minStars is not null ? filters.minStars : '' }}" class="form-control" placeholder="Étoiles min">
        </div>
        <div class="col-md-2">
            <input type="number" name="maxStars" value="{{ filters.maxStars is not null ? filters.maxStars : '' }}" class="form-control" placeholder="Étoiles max">
        </div>
        <div class="col-md-2">
            <select name="active" class="form-select">
                <option value="">Tous</option>
                <option value="1" {% if filters.active is same as(true) %}selected{% endif %}>Actif</option>
                <option value="0" {% if filters.active is same as(false) %}selected{% endif %}>Inactif</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Étoiles</th>
                <th>Actif</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hebergement in hebergements %}
            <tr>
                <td>{{ hebergement.id }}</td>
                <td>{{ hebergement.nom }}</td>
                <td>{{ hebergement.adresse }}</td>
                <td>{{ hebergement.ville }}</td>
                <td>{{ hebergement.nbEtoiles }}</td>
                <td>{{ hebergement.actif ? '✓' : '✗' }}</td>
                <td>
                    <a href="{{ path('app_hebergement_show', {'id': hebergement.id}) }}">Voir</a>
                    <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">Aucun hébergement trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hebergement_new') }}" class="btn btn-success">Créer un hébergement</a>
</div>
{% endblock %}
