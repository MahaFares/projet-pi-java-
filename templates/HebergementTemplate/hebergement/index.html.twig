{% extends 'BackOffice/base.html.twig' %}

{% block title %}H√©bergements | EcoTrip Admin{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
.hebergement-mgmt { 
    font-family: 'Plus Jakarta Sans', sans-serif;
    padding: 2rem;
}

.page-header {
    margin-bottom: 2rem;
}

.page-header h1 {
    font-size: 2rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
}

.toolbar {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    align-items: center;
    margin-bottom: 24px;
    background: white;
    padding: 1.5rem;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.search-wrap {
    flex: 1;
    min-width: 220px;
    position: relative;
}

.search-wrap input {
    width: 100%;
    padding: 12px 16px 12px 44px;
    border: 1.5px solid #e2e8f0;
    border-radius: 12px;
    font-size: 0.95rem;
    transition: border-color 0.2s;
}

.search-wrap input:focus {
    outline: none;
    border-color: #3b82f6;
}

.search-wrap i { 
    position: absolute; 
    left: 16px; 
    top: 50%; 
    transform: translateY(-50%); 
    color: #94a3b8; 
}

.filter-wrap select, 
.filter-wrap input {
    padding: 12px 16px;
    border: 1.5px solid #e2e8f0;
    border-radius: 12px;
    font-size: 0.95rem;
    min-width: 140px;
    transition: border-color 0.2s;
}

.filter-wrap select:focus,
.filter-wrap input:focus {
    outline: none;
    border-color: #3b82f6;
}

.btn-add {
    padding: 12px 24px;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s;
}

.btn-add:hover { 
    color: white; 
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.table-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    overflow: hidden;
}

.table-card table { 
    width: 100%; 
    border-collapse: collapse; 
}

.table-card th {
    padding: 16px 20px;
    text-align: left;
    font-weight: 600;
    font-size: 0.8rem;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: #f8fafc;
    border-bottom: 2px solid #e2e8f0;
}

.table-card td {
    padding: 16px 20px;
    border-bottom: 1px solid #f1f5f9;
    vertical-align: middle;
    font-size: 0.95rem;
}

.table-card tbody tr {
    transition: background-color 0.2s;
}

.table-card tbody tr:hover {
    background: #fafbfc;
}

.badge-role { 
    padding: 6px 14px; 
    border-radius: 20px; 
    font-size: 0.75rem; 
    font-weight: 600; 
    display: inline-block; 
}

.badge-role.stars { 
    background: #fef3c7; 
    color: #b45309; 
}

.badge-verified { 
    padding: 6px 14px; 
    border-radius: 20px; 
    font-size: 0.75rem; 
    font-weight: 600; 
}

.badge-verified.yes { 
    background: #dcfce7; 
    color: #166534; 
}

.badge-verified.no { 
    background: #fee2e2; 
    color: #991b1b; 
}

.actions-cell {
    display: flex;
    gap: 8px;
}

.btn-action {
    display: inline-flex; 
    align-items: center; 
    justify-content: center;
    width: 36px; 
    height: 36px; 
    border-radius: 10px;
    color: #64748b; 
    text-decoration: none;
    transition: all 0.2s;
    border: none;
    background: #f1f5f9;
    cursor: pointer;
    font-size: 1rem;
}

.btn-action:hover { 
    color: white; 
    transform: translateY(-2px);
}

.btn-action.edit:hover { 
    background: #3b82f6; 
}

.btn-action.view:hover { 
    background: #10b981; 
}

.btn-action.delete:hover { 
    background: #ef4444; 
}

.loading-overlay {
    position: relative;
}

.loading-overlay.loading::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
}

.empty-state {
    text-align: center;
    padding: 3rem;
    color: #64748b;
}

.empty-state-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
}
</style>
{% endblock %}

{% block body %}
<div class="hebergement-mgmt">
    <div class="page-header">
        <h1>üè® Gestion des H√©bergements</h1>
    </div>

    <div class="toolbar">
        <div class="search-wrap">
            <i class="bi bi-search"></i>
            <input type="text" id="searchInput" name="q" value="{{ filters.q|default('') }}" placeholder="Rechercher (nom, adresse, ville)...">
        </div>
        <div class="filter-wrap">
            <input type="number" id="minStars" name="minStars" value="{{ filters.minStars is not null ? filters.minStars : '' }}" placeholder="‚≠ê Min" style="width: 120px;" min="1" max="5">
        </div>
        <div class="filter-wrap">
            <input type="number" id="maxStars" name="maxStars" value="{{ filters.maxStars is not null ? filters.maxStars : '' }}" placeholder="‚≠ê Max" style="width: 120px;" min="1" max="5">
        </div>
        <div class="filter-wrap">
            <select id="activeFilter" name="active">
                <option value="">Statut: Tous</option>
                <option value="1" {% if filters.active is same as(true) %}selected{% endif %}>Actif</option>
                <option value="0" {% if filters.active is same as(false) %}selected{% endif %}>Inactif</option>
            </select>
        </div>
        <a href="{{ path('app_hebergement_new') }}" class="btn-add">
            <i class="bi bi-plus-lg"></i> Nouveau H√©bergement
        </a>
    </div>

    <div class="table-card">
        <table>
            <thead>
                <tr>
                    <th>H√âBERGEMENT</th>
                    <th>ADRESSE</th>
                    <th>VILLE</th>
                    <th>√âTOILES</th>
                    <th>STATUT</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody id="hebergementTableBody">
                {% for hebergement in hebergements %}
                <tr>
                    <td>
                        <strong>{{ hebergement.nom }}</strong>
                    </td>
                    <td>{{ hebergement.adresse }}</td>
                    <td>{{ hebergement.ville }}</td>
                    <td>
                        <span class="badge-role stars">‚≠ê {{ hebergement.nbEtoiles }}</span>
                    </td>
                    <td>
                        {% if hebergement.actif %}
                            <span class="badge-verified yes">‚úì Actif</span>
                        {% else %}
                            <span class="badge-verified no">‚úó Inactif</span>
                        {% endif %}
                    </td>
                    <td>
                        <div class="actions-cell">
                            <a href="{{ path('app_hebergement_show', {'id': hebergement.id}) }}" class="btn-action view" title="Voir">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="btn-action edit" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn-action delete" title="Supprimer" onclick="deleteHebergement({{ hebergement.id }})">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6">
                        <div class="empty-state">
                            <div class="empty-state-icon">üè®</div>
                            <p>Aucun h√©bergement trouv√©.</p>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Elements
        const searchInput = document.getElementById('searchInput');
        const minStarsInput = document.getElementById('minStars');
        const maxStarsInput = document.getElementById('maxStars');
        const activeFilter = document.getElementById('activeFilter');
        const tableBody = document.getElementById('hebergementTableBody');

        let timeout = null;

        function fetchResults() {
            // Collect All Values
            const q = searchInput.value;
            const minStars = minStarsInput.value;
            const maxStars = maxStarsInput.value;
            const active = activeFilter.value;

            const params = new URLSearchParams({
                q: q,
                minStars: minStars,
                maxStars: maxStars,
                active: active
            });

            // Update URL without page reload
            const newUrl = window.location.pathname + '?' + params.toString();
            window.history.pushState({}, '', newUrl);

            // Opacity for loading effect
            tableBody.style.opacity = '0.5';

            fetch('{{ path('app_hebergement_index') }}?' + params.toString(), {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.text())
            .then(html => {
                // Extract just the tbody content
                const parser = new DOMParser();
                const doc = parser.parseFromString(html, 'text/html');
                const newTbody = doc.querySelector('#hebergementTableBody');
                
                if (newTbody) {
                    tableBody.innerHTML = newTbody.innerHTML;
                }
                
                tableBody.style.opacity = '1';
            })
            .catch(error => {
                console.error('Error:', error);
                tableBody.style.opacity = '1';
            });
        }

        // Event Listeners with debounce
        const inputs = [searchInput, minStarsInput, maxStarsInput];
        inputs.forEach(input => {
            input.addEventListener('input', () => {
                clearTimeout(timeout);
                timeout = setTimeout(fetchResults, 300);
            });
        });

        // Immediate execution for select
        activeFilter.addEventListener('change', fetchResults);
    });

    // Delete function
    function deleteHebergement(id) {
        if (confirm('√ätes-vous s√ªr de vouloir supprimer cet h√©bergement ?')) {
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/hebergement/' + id;

            const csrfInput = document.createElement('input');
            csrfInput.type = 'hidden';
            csrfInput.name = '_token';
            csrfInput.value = 'delete' + id;

            form.appendChild(csrfInput);
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
{% endblock %}
