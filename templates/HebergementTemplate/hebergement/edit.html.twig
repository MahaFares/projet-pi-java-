{% extends 'BackOffice/base.html.twig' %}

{% block title %}Modifier Hébergement | EcoTrip Admin{% endblock %}
{% block page_title %}Modifier l'Hébergement{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-10">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="h3 fw-bold text-dark mb-1">Modifier l'hébergement</h2>
                    <p class="text-muted">Mettez à jour les informations de l'établissement <strong>{{ hebergement.nom }}</strong>.</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_hebergement_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            </div>

            {{ include('HebergementTemplate/hebergement/_form_new.html.twig', {'button_label': 'Mettre à jour l\'hébergement'}) }}
            
            <div class="mt-4 p-4 rounded-4 bg-danger-subtle border border-danger-subtle d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="fw-bold text-danger mb-1">Zone de danger</h6>
                    <p class="text-danger small mb-0">La suppression d'un hébergement est irréversible et supprimera toutes les données associées.</p>
                </div>
                {{ include('HebergementTemplate/hebergement/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
