<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}, 'multipart': true}) }}

        {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Erreurs de saisie</h4>
            {% for error in form.vars.errors %}
                <div>{{ error.message }}</div>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.nom.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.nom.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.nbEtoiles) }}
                    {{ form_widget(form.nbEtoiles, {'attr': {'class': 'form-control' ~ (form.nbEtoiles.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.nbEtoiles.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.nbEtoiles.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': '4'}}) }}
            {% if form.description.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {% for error in form.description.vars.errors %}
                        {{ error.message }}<br>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.adresse) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control' ~ (form.adresse.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.adresse.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.adresse.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.ville) }}
                    {{ form_widget(form.ville, {'attr': {'class': 'form-control' ~ (form.ville.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.ville.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.ville.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <label class="form-label">Sélectionnez la localisation sur la carte</label>
                <div id="map" style="height: 300px; border-radius: 12px; border: 1px solid #e2e8f0;"></div>
                <small class="text-muted">Faites glisser le marqueur pour définir les coordonnées précisément.</small>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.latitude) }}
                    {{ form_widget(form.latitude, {'attr': {'class': 'form-control' ~ (form.latitude.vars.errors|length > 0 ? ' is-invalid' : ''), 'step': '0.000001', 'id': 'lat_input'}}) }}
                    {% if form.latitude.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.latitude.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.longitude) }}
                    {{ form_widget(form.longitude, {'attr': {'class': 'form-control' ~ (form.longitude.vars.errors|length > 0 ? ' is-invalid' : ''), 'step': '0.000001', 'id': 'lng_input'}}) }}
                    {% if form.longitude.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.longitude.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const latInput = document.getElementById('lat_input');
                const lngInput = document.getElementById('lng_input');
                
                let initialLat = latInput.value || 36.8065;
                let initialLng = lngInput.value || 10.1815;
                
                var map = L.map('map').setView([initialLat, initialLng], 13);
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: '&copy; OpenStreetMap'
                }).addTo(map);

                var marker = L.marker([initialLat, initialLng], {draggable: true}).addTo(map);

                marker.on('dragend', function() {
                    var position = marker.getLatLng();
                    latInput.value = position.lat.toFixed(6);
                    lngInput.value = position.lng.toFixed(6);
                });

                map.on('click', function(e) {
                    marker.setLatLng(e.latlng);
                    latInput.value = e.latlng.lat.toFixed(6);
                    lngInput.value = e.latlng.lng.toFixed(6);
                });
            });
        </script>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.imagePrincipale) }}
                    {{ form_widget(form.imagePrincipale, {'attr': {'class': 'form-control' ~ (form.imagePrincipale.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'https://... ou mon-image.jpg'}}) }}
                    {% if form.imagePrincipale.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.imagePrincipale.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.labelEco) }}
                    {{ form_widget(form.labelEco, {'attr': {'class': 'form-control' ~ (form.labelEco.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.labelEco.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.labelEco.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if form.categorie is defined %}
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.categorie) }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-select' ~ (form.categorie.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.categorie.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.categorie.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.propietaire) }}
                    {{ form_widget(form.propietaire, {'attr': {'class': 'form-select' ~ (form.propietaire.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.propietaire.vars.errors|length > 0 %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.propietaire.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}

        {% if form.equipements is defined %}
        <div class="mb-3">
            {{ form_label(form.equipements) }}
            {{ form_widget(form.equipements, {'attr': {'class': 'form-select' ~ (form.equipements.vars.errors|length > 0 ? ' is-invalid' : ''), 'multiple': 'multiple'}}) }}
            {% if form.equipements.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
                    {% for error in form.equipements.vars.errors %}
                        {{ error.message }}<br>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        {% endif %}

        <div class="mb-3">
            <div class="form-check form-switch">
                {{ form_widget(form.actif, {'attr': {'class': 'form-check-input' ~ (form.actif.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                {{ form_label(form.actif, null, {'label_attr': {'class': 'form-check-label'}}) }}
                {% if form.actif.vars.errors|length > 0 %}
                    <div class="invalid-feedback d-block">
                        {% for error in form.actif.vars.errors %}
                            {{ error.message }}<br>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('app_hebergement_index') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>


