<div class="card border-0 shadow-sm">
    <div class="card-body p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

        {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">Erreurs de saisie</h4>
            {% for error in form.vars.errors %}
                <div>{{ error.message }}</div>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.numero) }}
                    {{ form_widget(form.numero, {'attr': {'class': 'form-control' ~ (form.numero.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.numero.vars.errors %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.numero.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control' ~ (form.type.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.type.vars.errors %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.type.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    {{ form_label(form.capacite) }}
                    {{ form_widget(form.capacite, {'attr': {'class': 'form-control' ~ (form.capacite.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    {% if form.capacite.vars.errors %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.capacite.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    {{ form_label(form.prixParNuit) }}
                    {{ form_widget(form.prixParNuit, {'attr': {'class': 'form-control' ~ (form.prixParNuit.vars.errors|length > 0 ? ' is-invalid' : ''), 'step': '0.01'}}) }}
                    {% if form.prixParNuit.vars.errors %}
                        <div class="invalid-feedback d-block">
                            {% for error in form.prixParNuit.vars.errors %}
                                {{ error.message }}<br>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="form-check form-switch">
                        {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input' ~ (form.disponible.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                        {{ form_label(form.disponible, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {% if form.disponible.vars.errors %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.disponible.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': '4'}}) }}
            {% if form.description.vars.errors %}
                <div class="invalid-feedback d-block">
                    {% for error in form.description.vars.errors %}
                        {{ error.message }}<br>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            <a href="{{ path('app_chambre_index') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(form) }}
    </div>
</div>


