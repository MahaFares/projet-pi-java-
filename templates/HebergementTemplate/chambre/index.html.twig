{% extends 'BackOffice/base.html.twig' %}

{% block title %}Chambres - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Chambres</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Type</th>
                <th>Capacite</th>
                <th>PrixParNuit</th>
                <th>Description</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.numero }}</td>
                <td>{{ chambre.type }}</td>
                <td>{{ chambre.capacite }}</td>
                <td>{{ chambre.prixParNuit }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.disponible ? '✓' : '✗' }}</td>
                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}">Voir</a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-muted">Aucune chambre trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chambre_new') }}" class="btn btn-success">Créer une chambre</a>
</div>
{% endblock %}
