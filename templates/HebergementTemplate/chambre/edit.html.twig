{% extends 'BackOffice/base.html.twig' %}

{% block title %}Modifier Chambre | EcoTrip Admin{% endblock %}
{% block page_title %}Modifier la Chambre{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-10">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <div>
                    <h2 class="h3 fw-bold text-dark mb-1">Modifier la chambre</h2>
                    <p class="text-muted">Mise à jour de la chambre <strong>{{ chambre.numero }}</strong> de l'établissement <strong>{{ chambre.hebergement.nom }}</strong>.</p>
                </div>
                <a href="{{ path('app_chambre_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Retour
                </a>
            </div>

            {{ include('HebergementTemplate/chambre/_form.html.twig', {'button_label': 'Mettre à jour la chambre'}) }}
            
            <div class="mt-4 p-4 rounded-4 bg-danger-subtle border border-danger-subtle d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="fw-bold text-danger mb-1">Zone de danger</h6>
                    <p class="text-danger small mb-0">La suppression d'une chambre est définitive.</p>
                </div>
                {{ include('HebergementTemplate/chambre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
