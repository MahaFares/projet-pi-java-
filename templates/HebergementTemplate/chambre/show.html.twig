{% extends 'base.html.twig' %}

{% block title %}Chambre - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>Détails de la chambre</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ chambre.numero }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ chambre.type }}</td>
            </tr>
            <tr>
                <th>Capacité</th>
                <td>{{ chambre.capacite }}</td>
            </tr>
            <tr>
                <th>Prix / nuit</th>
                <td>{{ chambre.prixParNuit }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ chambre.description }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ chambre.disponible ? '✓' : '✗' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('app_chambre_index') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-primary ms-2">Modifier</a>
    </div>

    <div class="mt-3">
        {{ include('HebergementTemplate/chambre/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
