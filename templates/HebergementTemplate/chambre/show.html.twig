{% extends 'BackOffice/base.html.twig' %}

{% block title %}Détails de la Chambre | EcoTrip Admin{% endblock %}
{% block page_title %}Détails Chambre{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .room-card { background: white; border-radius: 24px; box-shadow: 0 10px 40px rgba(0,0,0,0.04); overflow: hidden; }
    .room-hero { background: linear-gradient(135deg, #8b5cf6, #7c3aed); padding: 60px 40px; color: white; position: relative; }
    .room-badge { position: absolute; top: 40px; right: 40px; padding: 10px 20px; border-radius: 50px; font-weight: 700; font-size: 0.9rem; }
    .room-badge.avail { background: rgba(255,255,255,0.2); border: 2px solid rgba(255,255,255,0.4); }
    
    .info-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1px; background: #e2e8f0; border-bottom: 1px solid #e2e8f0; }
    .info-item { background: white; padding: 30px; }
    .info-label { font-size: 0.75rem; font-weight: 700; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 8px; }
    .info-value { font-size: 1.25rem; font-weight: 600; color: #1e293b; }
    
    .desc-section { padding: 40px; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-xxl-8 col-xl-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <a href="{{ path('app_chambre_index') }}" class="btn btn-light rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-pencil me-2"></i>Modifier
                    </a>
                </div>
            </div>

            <div class="room-card border-0">
                <div class="room-hero">
                    <div class="room-badge avail">
                        <i class="bi bi-check-circle-fill me-2"></i>{{ chambre.disponible ? 'Disponible' : 'Occupée' }}
                    </div>
                    <p class="text-uppercase fw-bold opacity-75 mb-2 letter-spacing-1">Hébergement : {{ chambre.hebergement.nom }}</p>
                    <h1 class="display-5 fw-bold mb-0">Chambre {{ chambre.numero }}</h1>
                    <p class="mt-2 opacity-75"><i class="bi bi-tag me-1"></i> {{ chambre.type }}</p>
                </div>
                
                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Prix / Nuit</div>
                        <div class="info-value text-primary">{{ chambre.prixParNuit }} DT</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Capacité</div>
                        <div class="info-value">{{ chambre.capacite }} Personnes</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label">Localisation</div>
                        <div class="info-value">{{ chambre.hebergement.ville }}</div>
                    </div>
                </div>

                <div class="desc-section">
                    <div class="info-label">Description & Détails</div>
                    <div class="text-muted mt-3" style="line-height: 1.8;">
                        {{ chambre.description|default('Aucune description fournie.')|nl2br }}
                    </div>
                </div>

                <div class="bg-light p-4 px-5 border-top d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i> ID Chambre : #{{ chambre.id }}
                    </div>
                    <div class="badge bg-white text-dark shadow-sm border py-2 px-3 rounded-pill fw-bold">
                        <i class="bi bi-info-circle text-primary me-2"></i>{{ chambre.hebergement.categorie.nom|default('Hébergement') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
