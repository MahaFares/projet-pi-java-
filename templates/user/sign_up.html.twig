{% extends 'base.html.twig' %}

{% block title %}S'inscrire | Royal Hotel{% endblock %}

{% block stylesheets %}
    <style>
        .auth-card { max-width: 420px; margin: 0 auto; padding: 2rem; border: 1px solid #e8e8e8; border-radius: 8px; box-shadow: 0 2px 12px rgba(0,0,0,0.06); }
        .auth-card h2 { margin-bottom: 1.5rem; color: #2d5016; }
    </style>
{% endblock %}

{% block body %}
    <!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
        <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="page-cover text-center">
                <h2 class="page-cover-tittle">Créer un compte</h2>
                <ol class="breadcrumb">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="active">S'inscrire</li>
                </ol>
            </div>
        </div>
    </section>
    <!--================Breadcrumb Area =================-->

    <!--================Sign Up Area =================-->
    <section class="accomodation_area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="auth-card">
                        <h2 class="text-center">Inscription</h2>
                        {% if success %}
                            <div class="alert alert-success" role="alert">
                                Compte créé. Vous pouvez vous connecter.
                            </div>
                        {% endif %}
                        {% if error %}
                            <div class="alert alert-danger" role="alert">{{ error }}</div>
                        {% endif %}
                        <form action="{{ path('app_sign_up') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('sign_up') }}">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="{{ last_email }}" required autofocus placeholder="votre@email.com">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" class="form-control" id="password" name="password" required minlength="6" placeholder="••••••••">
                            </div>
                            <div class="form-group">
                                <label for="password_confirm">Confirmer le mot de passe</label>
                                <input type="password" class="form-control" id="password_confirm" name="password_confirm" required minlength="6" placeholder="••••••••">
                            </div>
                            <button type="submit" class="btn theme_btn button_hover btn-block">S'inscrire</button>
                        </form>
                        <p class="text-center mt-3 mb-0">
                            Déjà un compte ? <a href="{{ path('app_sign_in') }}">Se connecter</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Sign Up Area =================-->
{% endblock %}
