<style>
.dropdown-header {
    cursor: pointer;
    padding: 12px 20px;
    color: rgba(255,255,255,0.9);
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s;
    user-select: none;
}
.dropdown-header:hover {
    background-color: rgba(255,255,255,0.1);
}
.dropdown-header i.fa-angle-down {
    transition: transform 0.3s;
}
.collapse {
    padding-left: 15px;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}
.collapse.show {
    max-height: 1000px;
}
.collapse li a {
    padding-left: 35px;
    font-size: 0.9rem;
    display: block;
    padding-top: 8px;
    padding-bottom: 8px;
}
.collapse li a:hover {
    background-color: rgba(255,255,255,0.05);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.dropdown-header').forEach(function(header) {
        header.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const targetSelector = this.getAttribute('data-target');
            const menu = document.querySelector(targetSelector);
            
            if (menu) {
                document.querySelectorAll('.collapse').forEach(function(m) {
                    if (m !== menu) {
                        m.classList.remove('show');
                    }
                });
                menu.classList.toggle('show');
            }
        });
    });
    
    document.querySelectorAll('.collapse li a').forEach(function(link) {
        link.addEventListener('click', function() {
            const menu = this.closest('.collapse');
            if (menu) {
                menu.classList.remove('show');
            }
        });
    });
});
</script>
