{% extends 'base.html.twig' %}

{% block title %}S'inscrire | Royal Hotel{% endblock %}

{% block stylesheets %}
    <style>
        .auth-card { max-width: 420px; margin: 0 auto; padding: 2rem; border: 1px solid #e8e8e8; border-radius: 8px; box-shadow: 0 2px 12px rgba(0,0,0,0.06); }
        .auth-card h2 { margin-bottom: 1.5rem; color: #2d5016; }
    </style>
{% endblock %}

{% block body %}
    <!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
        <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="page-cover text-center">
                <h2 class="page-cover-tittle">Créer un compte</h2>
                <ol class="breadcrumb">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="active">S'inscrire</li>
                </ol>
            </div>
        </div>
    </section>
    <!--================Breadcrumb Area =================-->

    <!--================Register Area =================-->
    <section class="accomodation_area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="auth-card">
                        <h2 class="text-center">Inscription</h2>
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                        {{ form_errors(registrationForm) }}
                        {{ form_start(registrationForm) }}
                            {{ form_row(registrationForm.email, {
                                label: 'Email',
                                attr: { placeholder: 'votre@email.com', class: 'form-control' }
                            }) }}
                            {{ form_row(registrationForm.username, {
                                label: 'Username',
                                attr: { placeholder: 'username', class: 'form-control'}
                            })}}
                            {{ form_errors(registrationForm.plainPassword) }}
                            {{ form_row(registrationForm.plainPassword.first) }}
                            {{ form_row(registrationForm.plainPassword.second) }}
                            {{ form_row(registrationForm.agreeTerms, {
                                label: "J'accepte les conditions d'utilisation"
                            }) }}
                            <button type="submit" class="btn theme_btn button_hover btn-block">S'inscrire</button>
                        {{ form_end(registrationForm) }}
                        <p class="text-center mt-3 mb-0">
                            Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Register Area =================-->
{% endblock %}
