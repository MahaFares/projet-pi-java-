{% extends 'base.html.twig' %}

{% block title %}Se connecter | Royal Hotel{% endblock %}

{% block stylesheets %}
    <style>
        .auth-card { max-width: 420px; margin: 0 auto; padding: 2rem; border: 1px solid #e8e8e8; border-radius: 8px; box-shadow: 0 2px 12px rgba(0,0,0,0.06); }
        .auth-card h2 { margin-bottom: 1.5rem; color: #2d5016; }
    </style>
{% endblock %}

{% block body %}
    <!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
        <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="page-cover text-center">
                <h2 class="page-cover-tittle">Se connecter</h2>
                <ol class="breadcrumb">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="active">Se connecter</li>
                </ol>
            </div>
        </div>
    </section>
    <!--================Breadcrumb Area =================-->

    <!--================Sign In Area =================-->
    <section class="accomodation_area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="auth-card">
                        <h2 class="text-center">Connexion</h2>
                        {% if app.request.query.get('success') %}
                            <div class="alert alert-success" role="alert">Compte créé. Vous pouvez vous connecter.</div>
                        {% endif %}
                        {% if error %}
                            <div class="alert alert-danger" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                        {% if app.user %}
                            <div class="alert alert-info mb-3">Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a></div>
                        {% endif %}
                        <form action="{{ path('app_login') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="email" class="form-control" id="inputEmail" name="email" value="{{ last_username }}" required autofocus autocomplete="email" placeholder="votre@email.com">
                            </div>
                            <div class="form-group">
                                <label for="inputPassword">Mot de passe</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" required autocomplete="current-password" placeholder="••••••••">
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" checked>
                                <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
                            </div>
                            <button type="submit" class="btn theme_btn button_hover btn-block">Se connecter</button>
                        </form>
                        <p class="text-center mt-3 mb-0">
                            Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
                        </p>
                        <p class="text-center mt-3 mb-0">
                            <a href="{{ path('app_forgot_password_request') }}">
                                Mot de passe oublié ?
                            </a>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================Sign In Area =================-->
{% endblock %}
