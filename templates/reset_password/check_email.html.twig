{% extends 'base.html.twig' %}

{% block title %}Email envoyé | EcoTrip Admin{% endblock %}

{% block stylesheets %}
    <style>
        .auth-card { max-width: 420px; margin: 0 auto; padding: 2.5rem; border: 1px solid #e8e8e8; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); background: white; text-align: center; }
        .auth-card h2 { margin-bottom: 1.5rem; color: #2d5016; font-weight: 700; }
        .success-icon { font-size: 4rem; color: #2d5016; margin-bottom: 1rem; }
        .theme_btn { background: #2d5016; color: #fff; border: 1px solid #2d5016; }
        .theme_btn:hover { background: transparent; color: #2d5016; }
    </style>
{% endblock %}

{% block body %}
    <!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
        <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="page-cover text-center">
                <h2 class="page-cover-tittle">Vérification</h2>
                <ol class="breadcrumb">
                    <li><a href="{{ path('app_home') }}">Home</a></li>
                    <li class="active">Vérification Email</li>
                </ol>
            </div>
        </div>
    </section>
    <!--================Breadcrumb Area =================-->

    <section class="accomodation_area section_gap">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="auth-card">
                        <div class="success-icon">
                            <i class="bi bi-envelope-check"></i>
                        </div>
                        <h2>Email Envoyé</h2>
                        
                        <p class="text-muted mb-4">
                            Si un compte correspondant à votre adresse existe, un email vient d'être envoyé avec un lien pour réinitialiser votre mot de passe.
                        </p>
                        
                        <div class="alert alert-info small" role="alert">
                            Ce lien expirera dans {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </div>

                        <p class="text-muted small">
                            Si vous ne recevez pas d'email, veuillez vérifier vos spams ou <a href="{{ path('app_forgot_password_request') }}">réessayer</a>.
                        </p>

                        <a href="{{ path('app_login') }}" class="btn theme_btn button_hover btn-block mt-4">Retour à la connexion</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
