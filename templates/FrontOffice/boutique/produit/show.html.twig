{% extends 'base.html.twig' %}

{% block title %}Produit {{ produit.nom }} | Admin{% endblock %}

{% block body %}
<section class="breadcrumb_area">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Produit</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_produit_index') }}">Produits</a></li>
                <li class="active">{{ produit.nom }}</li>
            </ol>
        </div>
    </div>
</section>

<section class="accomodation_area section_gap">
    <div class="container">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">{{ produit.id }}</dd>
            <dt class="col-sm-3">Nom</dt>
            <dd class="col-sm-9">{{ produit.nom }}</dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">{{ produit.description|default('—') }}</dd>
            <dt class="col-sm-3">Prix</dt>
            <dd class="col-sm-9">{{ produit.prix }}</dd>
            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">{{ produit.stock }}</dd>
            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">{{ produit.image|default('—') }}</dd>
            <dt class="col-sm-3">Catégorie</dt>
            <dd class="col-sm-9">{{ produit.categorie ? produit.categorie.nom : '—' }}</dd>
        </dl>
        <p>
            <a href="{{ path('app_produit_edit', { id: produit.id }) }}" class="btn theme_btn button_hover">Modifier</a>
            <form method="post" action="{{ path('app_produit_delete', { id: produit.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce produit ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_produit_' ~ produit.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
            <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </p>
    </div>
</section>
{% endblock %}
