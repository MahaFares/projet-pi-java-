{% extends 'base.html.twig' %}

{% block title %}Produits | Admin{% endblock %}

{% block body %}
<section class="breadcrumb_area">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Produits</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="active">Produits</li>
            </ol>
        </div>
    </div>
</section>
</section>
<!-- Boutons de navigation -->
<section class="py-3">
    <div class="container">
       <div class="text-right">
    <a href="{{ path('app_categorie_new') }}" class="btn theme_btn button_hover">Categorie</a>
    <a href="{{ path('app_paiement_new') }}" class="btn theme_btn button_hover">Paiement</a>
    <a href="{{ path('app_commande_new') }}" class="btn theme_btn button_hover">Commandes</a>
</div>
    </div>
</section>

<section class="accomodation_area section_gap">
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <p><a href="{{ path('app_produit_new') }}" class="btn theme_btn button_hover">Nouveau produit</a></p>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Catégorie</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for p in produits %}
                    <tr>
                        <td>{{ p.id }}</td>
                        <td>{{ p.nom }}</td>
                        <td>{{ p.prix }}</td>
                        <td>{{ p.stock }}</td>
                        <td>{{ p.categorie ? p.categorie.nom : '—' }}</td>
                        <td>
                            <a href="{{ path('app_produit_show', { id: p.id }) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_produit_edit', { id: p.id }) }}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form method="post" action="{{ path('app_produit_delete', { id: p.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce produit ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_produit_' ~ p.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="6">Aucun produit.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
