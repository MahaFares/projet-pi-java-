{% extends 'base.html.twig' %}

{% block title %}Paiement #{{ paiement.id }} | Admin{% endblock %}

{% block body %}
<section class="breadcrumb_area">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Paiement</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_paiement_index') }}">Paiements</a></li>
                <li class="active">#{{ paiement.id }}</li>
            </ol>
        </div>
    </div>
</section>

<section class="accomodation_area section_gap">
    <div class="container">
        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">{{ paiement.id }}</dd>
            <dt class="col-sm-3">Commande</dt>
            <dd class="col-sm-9">{% if paiement.commande %}<a href="{{ path('app_commande_show', { id: paiement.commande.idCommande }) }}">#{{ paiement.commande.idCommande }}</a>{% else %}—{% endif %}</dd>
            <dt class="col-sm-3">Montant</dt>
            <dd class="col-sm-9">{{ paiement.montant }}</dd>
            <dt class="col-sm-3">Méthode</dt>
            <dd class="col-sm-9">{{ paiement.methodePaiement }}</dd>
            <dt class="col-sm-3">Statut</dt>
            <dd class="col-sm-9">{{ paiement.statutPaiement }}</dd>
            <dt class="col-sm-3">Date paiement</dt>
            <dd class="col-sm-9">{{ paiement.datePaiement ? paiement.datePaiement|date('d/m/Y H:i') : '—' }}</dd>
            <dt class="col-sm-3">Référence</dt>
            <dd class="col-sm-9">{{ paiement.referencePaiement|default('—') }}</dd>
        </dl>
        <p>
            <a href="{{ path('app_paiement_edit', { id: paiement.id }) }}" class="btn theme_btn button_hover">Modifier</a>
            <form method="post" action="{{ path('app_paiement_delete', { id: paiement.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer ce paiement ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_paiement_' ~ paiement.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
            <a href="{{ path('app_paiement_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </p>
    </div>
</section>
{% endblock %}
