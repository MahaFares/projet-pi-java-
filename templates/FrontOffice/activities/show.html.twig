{% extends 'basefront.html.twig' %}

{% block title %}{{ activity.title }} - Royal Hotel{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  .event-hero { position: relative; height: 380px; overflow: hidden; background: #1a1a1a; }
  .event-hero img { width: 100%; height: 100%; object-fit: cover; opacity: 0.85; }
  .event-hero .overlay { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%); display: flex; align-items: flex-end; padding: 40px 0 30px; }
  .event-hero .hero-content { color: #fff; }
  .event-hero .hero-badge { display: inline-block; background: #2d5016; color: #fff; padding: 6px 14px; border-radius: 6px; font-size: 0.8rem; font-weight: 600; margin-bottom: 10px; }
  .event-hero .hero-title { font-size: 2rem; font-weight: 700; margin: 0; text-shadow: 0 2px 8px rgba(0,0,0,0.5); }
  .event-back { position: absolute; top: 20px; left: 20px; z-index: 5; color: #fff; background: rgba(0,0,0,0.4); padding: 8px 14px; border-radius: 8px; text-decoration: none; font-size: 0.9rem; }
  .event-back:hover { color: #fff; background: rgba(45, 80, 22, 0.9); }

  .event-body { padding: 2.5rem 0 3rem; }
  .event-main { margin-bottom: 2rem; }
  .event-description { font-size: 1.05rem; line-height: 1.7; color: #444; }
  .info-card { background: #f8f9fa; border-radius: 12px; padding: 1.25rem 1.5rem; margin-bottom: 1rem; border-left: 4px solid #2d5016; }
  .info-card h6 { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.05em; color: #666; margin-bottom: 0.5rem; }
  .info-card .value { font-size: 1.1rem; font-weight: 600; color: #222; }
  .schedule-table { width: 100%; border-collapse: collapse; }
  .schedule-table th, .schedule-table td { padding: 12px 14px; text-align: left; border-bottom: 1px solid #eee; }
  .schedule-table th { font-size: 0.75rem; text-transform: uppercase; color: #666; }
  .schedule-table tr:last-child td { border-bottom: 0; }
  .price-box { background: linear-gradient(135deg, #2d5016 0%, #1e4620 100%); color: #fff; padding: 1.5rem; border-radius: 12px; text-align: center; }
  .price-box .amount { font-size: 2rem; font-weight: 700; }
  .price-box .unit { font-size: 0.9rem; opacity: 0.9; }
  .btn-reserve-event { background: #2d5016; color: #fff; font-weight: 600; padding: 14px 28px; border-radius: 8px; border: 0; display: inline-block; text-decoration: none; }
  .btn-reserve-event:hover { background: #1e4620; color: #fff; }

  .guide-card { background: #fff; border: 1px solid #e5e7eb; border-radius: 12px; overflow: hidden; display: flex; flex-wrap: wrap; }
  .guide-card .guide-photo { width: 120px; height: 120px; object-fit: cover; background: #e9ecef; }
  .guide-card .guide-info { flex: 1; min-width: 200px; padding: 1.25rem; }
  .guide-card .guide-name { font-size: 1.15rem; font-weight: 700; margin-bottom: 4px; }
  .guide-card .guide-rating { color: #eab308; }
  .guide-card .guide-bio { font-size: 0.9rem; color: #555; margin-top: 8px; line-height: 1.5; }
  .guide-card .guide-contact { font-size: 0.85rem; color: #666; margin-top: 8px; }
</style>
{% endblock %}

{% block body %}

{# Hero with image and title #}
<section class="event-hero">
    <a href="{{ path('activities_blog') }}" class="event-back">‚Üê Retour aux activit√©s</a>
    {% if activity.image %}
        <img src="{{ asset('uploads/' ~ activity.image) }}" alt="{{ activity.title }}">
    {% else %}
        <img src="{{ asset('images/room' ~ (((activity.id ?? 0) % 4) + 1) ~ '.jpg') }}" alt="{{ activity.title }}">
    {% endif %}
    <div class="overlay">
        <div class="container">
            <div class="hero-content">
                {% if activity.category %}
                    <span class="hero-badge">{{ activity.category.name }}</span>
                {% endif %}
                <h1 class="hero-title">{{ activity.title }}</h1>
            </div>
        </div>
    </div>
</section>

<div class="container event-body">
    <div class="row">
        <div class="col-lg-8 event-main">
            {% if activity.description %}
                <div class="event-description mb-4">{{ activity.description|raw }}</div>
            {% endif %}

            <h5 class="mb-3">Informations</h5>
            <div class="row">
                {% if activity.location %}
                    <div class="col-md-6">
                        <div class="info-card">
                            <h6>Lieu</h6>
                            <div class="value">üìç {{ activity.location }}</div>
                        </div>
                    </div>
                {% endif %}
                {% if activity.durationMinutes %}
                    <div class="col-md-6">
                        <div class="info-card">
                            <h6>Dur√©e</h6>
                            <div class="value">üïê {{ activity.durationMinutes >= 60 ? (activity.durationMinutes / 60)|round(1, 'floor') ~ ' h' : activity.durationMinutes ~ ' min' }}</div>
                        </div>
                    </div>
                {% endif %}
                {% if activity.maxParticipants %}
                    <div class="col-md-6">
                        <div class="info-card">
                            <h6>Participants</h6>
                            <div class="value">üë• Max {{ activity.maxParticipants }} personnes</div>
                        </div>
                    </div>
                {% endif %}
            </div>

            {# Schedules #}
            {% if activity.schedules|length > 0 %}
                <h5 class="mb-3 mt-4">Horaires & disponibilit√©s</h5>
                <div class="info-card p-0 overflow-hidden">
                    <table class="schedule-table mb-0">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>D√©but</th>
                                <th>Fin</th>
                                <th>Places</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for schedule in activity.schedules %}
                                <tr>
                                    <td>{{ schedule.startAt|date('d/m/Y') }}</td>
                                    <td>{{ schedule.startAt|date('H:i') }}</td>
                                    <td>{{ schedule.endAt|date('H:i') }}</td>
                                    <td>{{ schedule.availableSpots ?? '‚Äì' }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>

        <div class="col-lg-4">
            <div class="price-box mb-4">
                {% if activity.price is defined and activity.price is not null %}
                    <div class="amount">{{ activity.price|number_format(2, ',', ' ') }} ‚Ç¨</div>
                    <div class="unit">par personne</div>
                {% else %}
                    <div class="amount">‚Äì</div>
                    <div class="unit">Prix sur demande</div>
                {% endif %}
            </div>
            <div class="text-center mb-4">
                <a href="{{ path('activities_blog') }}" class="btn-reserve-event">R√©server cette activit√©</a>
            </div>

            {# Guide #}
            {% if activity.guide %}
                <h5 class="mb-3">Votre guide</h5>
                <div class="guide-card">
                    {% if activity.guide.photo %}
                        <img class="guide-photo" src="{{ asset('uploads/' ~ activity.guide.photo) }}" alt="{{ activity.guide.firstName }} {{ activity.guide.lastName }}">
                    {% else %}
                        <div class="guide-photo d-flex align-items-center justify-content-center text-muted small">Photo</div>
                    {% endif %}
                    <div class="guide-info">
                        <div class="guide-name">{{ activity.guide.firstName }} {{ activity.guide.lastName }}</div>
                        {% if activity.guide.rating %}
                            <span class="guide-rating">‚òÖ {{ activity.guide.rating }}</span>
                        {% endif %}
                        {% if activity.guide.bio %}
                            <div class="guide-bio">{{ activity.guide.bio }}</div>
                        {% endif %}
                        <div class="guide-contact">
                            {% if activity.guide.email %}üìß {{ activity.guide.email }}{% endif %}
                            {% if activity.guide.phone %}<br>üìû {{ activity.guide.phone }}{% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if activity.image360 or (activity.latitude and activity.longitude) %}
                <a href="{{ path('app_activity_virtual_tour', {id: activity.id}) }}" 
                class="btn btn-primary btn-lg">
                    <i class="fa fa-globe"></i> Visite Virtuelle 360¬∞
                </a>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
