    <section class="banner_area blog_banner d_flex align-items-center">
        <div class="overlay bg-parallax"></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Discover Our Activities & Events</h2>
                <p>Explore upcoming activities, guided experiences and special events</p>
            </div>
        </div>
    </section>

<!--================ Categories Filter =================-->
<section class="blog_categorie_area">
    <div class="container">
        <div class="row">
            {% for category in categories %}
                <div class="col-lg-3 col-md-6">
                    <div class="categories_post">
                        <img src="{{ asset('uploads/category/' ~ category.icon) }}" alt="">
                        <div class="categories_details">
                            <div class="categories_text">
                                <a href="{{ path('activity_by_category', {id: category.id}) }}">
                                    <h5>{{ category.name }}</h5>
                                </a>
                                <div class="border_line"></div>
                                <p>{{ category.description|slice(0,60) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!--================ Activity List =================-->
<section class="blog_area section_gap">
    <div class="container">
        <div class="row">

            <!-- LEFT CONTENT -->
            <div class="col-lg-8">
                <div class="blog_left_sidebar">

                    {% for activity in activities %}
                        <article class="row blog_item mb-4">
                            
                            <!-- Meta -->
                            <div class="col-md-3">
                                <div class="blog_info text-right">
                                    <ul class="blog_meta list_style">
                                        <li>
                                            <a>{{ activity.category.name }}
                                                <i class="lnr lnr-tag"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a>{{ activity.price }} DT
                                                <i class="lnr lnr-cart"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a>{{ activity.location }}
                                                <i class="lnr lnr-map"></i>
                                            </a>
                                        </li>
                                        <li>
                                            <a>{{ activity.duration }}
                                                <i class="lnr lnr-clock"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Card -->
                            <div class="col-md-9">
                                <div class="blog_post">
                                    <img src="{{ asset('uploads/activity/' ~ activity.image) }}" alt="">
                                    <div class="blog_details">
                                        <a href="{{ path('activity_show', {id: activity.id}) }}">
                                            <h3>{{ activity.title }}</h3>
                                        </a>

                                        <p>
                                            {{ activity.description|slice(0,150) ~ '...' }}
                                        </p>

                                        <a href="{{ path('activity_show', {id: activity.id}) }}"
                                           class="view_btn button_hover">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </article>
                    {% else %}
                        <p>No activities found.</p>
                    {% endfor %}

                    <!-- Pagination -->
                    <nav class="blog-pagination justify-content-center d-flex">
                        <ul class="pagination">
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Previous">
                                    <span aria-hidden="true">
                                        <span class="lnr lnr-chevron-left"></span>
                                    </span>
                                </a>
                            </li>
                            <li class="page-item"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                            <li class="page-item">
                                <a href="#" class="page-link" aria-label="Next">
                                    <span aria-hidden="true">
                                        <span class="lnr lnr-chevron-right"></span>
                                    </span>
                                </a>
                            </li>

                </div>
            </div>

            <!-- RIGHT SIDEBAR -->
            <div class="col-lg-4">
                <div class="blog_right_sidebar">

                    <!-- Search -->
                    <aside class="single_sidebar_widget search_widget">
                        <form method="get">
                            <div class="input-group">
                                <input type="text" name="q" class="form-control"
                                       placeholder="Search activity">
                                <span class="input-group-btn">
                                    <button class="btn btn-default">
                                        <i class="lnr lnr-magnifier"></i>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </aside>

                    <!-- Upcoming schedules -->
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Upcoming Schedules</h3>

                        {% for s in schedules %}
                            <div class="media post_item">
                                <img src="{{ asset('uploads/activity/' ~ s.activity.image) }}" width="80">
                                <div class="media-body">
                                    <h5>{{ s.activity.title }}</h5>
                                    <p>{{ s.startDate|date('d M Y H:i') }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </aside>

                    <!-- Guides -->
                    <aside class="single_sidebar_widget author_widget">
                        <h4>Our Guides</h4>

                        {% for guide in guides %}
                            <p>
                                <strong>{{ guide.fullName }}</strong><br>
                                {{ guide.speciality }}
                            </p>
                        {% endfor %}
                    </aside>

                </div>
            </div>

        </div>
    </div>
</section>
