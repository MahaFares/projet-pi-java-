{% extends 'basefront.html.twig' %}

{% block title %}Activit√©s - Royal Hotel{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  .activities-hero { background: linear-gradient(135deg, #2d5016 0%, #1e4620 100%); padding: 50px 0 40px; }

  /* ----- Filter sidebar: proper side panel ----- */
  .filter-sidebar-panel {
    position: sticky;
    top: 100px;
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    overflow: hidden;
  }
  .filter-sidebar-panel .panel-head {
    background: #2d5016;
    color: #fff;
    padding: 14px 18px;
    font-weight: 700;
    font-size: 0.8rem;
    letter-spacing: 0.06em;
  }
  .filter-sidebar-panel .panel-body { padding: 18px; }
  .filter-sidebar-panel .filter-section {
    margin-bottom: 20px;
    padding-bottom: 18px;
    border-bottom: 1px solid #eee;
  }
  .filter-sidebar-panel .filter-section:last-child { margin-bottom: 0; padding-bottom: 0; border-bottom: 0; }
  .filter-sidebar-panel .filter-label {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #555;
    margin-bottom: 10px;
  }
  .filter-sidebar-panel .category-list { list-style: none; padding: 0; margin: 0; }
  .filter-sidebar-panel .category-list li { margin: 0; padding: 0; }
  .filter-sidebar-panel .category-list a {
    display: block;
    padding: 10px 12px;
    color: #333;
    text-decoration: none;
    border-radius: 8px;
    transition: background 0.2s, color 0.2s;
  }
  .filter-sidebar-panel .category-list a:hover { background: #f0f7ed; color: #2d5016; }
  .filter-sidebar-panel .category-list a.active { background: #2d5016; color: #fff; }
  .filter-sidebar-panel .category-list a.disabled { color: #999; cursor: default; pointer-events: none; }
  .filter-sidebar-panel .price-inputs { display: flex; gap: 8px; margin-bottom: 10px; }
  .filter-sidebar-panel .price-inputs input { flex: 1; }
  .filter-sidebar-panel select, .filter-sidebar-panel .form-control-sm { 
    border: 1px solid #ddd; 
    border-radius: 6px;
    padding: 8px;
    font-size: 0.875rem;
  }
  .filter-sidebar-panel select:focus, .filter-sidebar-panel .form-control-sm:focus {
    border-color: #2d5016;
    outline: none;
    box-shadow: 0 0 0 3px rgba(45, 80, 22, 0.1);
  }
  .btn-apply-filter { background: #2d5016; border: 0; color: #fff; font-weight: 600; width: 100%; padding: 10px; border-radius: 8px; }
  .btn-apply-filter:hover { background: #1e4620; color: #fff; }

  /* ----- Animated card images ----- */
  .card-activity { overflow: hidden; transition: box-shadow 0.3s ease, transform 0.3s ease; }
  .card-activity:hover { box-shadow: 0 12px 28px rgba(0,0,0,0.15); transform: translateY(-4px); }
  .card-activity .img-wrap {
    position: relative;
    height: 240px;
    overflow: hidden;
    background: #e9ecef;
  }
  .card-activity .img-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }
  .card-activity:hover .img-wrap img { transform: scale(1.08); }
  .card-activity .img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 14px;
    background: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, transparent 45%, transparent 55%, rgba(0,0,0,0.5) 100%);
    color: #fff;
    font-weight: 600;
    letter-spacing: 0.02em;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .card-activity .img-overlay-location { font-size: 0.9rem; text-shadow: 0 1px 4px rgba(0,0,0,0.7); }
  .card-activity .img-overlay-type {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    align-self: flex-start;
    background: rgba(45, 80, 22, 0.9);
    padding: 4px 12px;
    border-radius: 6px;
  }
  .card-activity .category-pill {
    display: inline-block;
    background: #2d5016;
    color: #fff;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 8px;
  }
  .card-activity .activity-details { display: flex; flex-wrap: wrap; gap: 10px 16px; font-size: 0.8rem; color: #555; margin-bottom: 10px; }
  .card-activity .activity-details span { display: inline-flex; align-items: center; gap: 4px; }
  .card-activity .card-body { position: relative; }
  .card-activity .btn-reserve { background: #2d5016; border: 0; color: #fff; font-weight: 600; width: 100%; padding: 10px; border-radius: 8px; }
  .card-activity .btn-reserve:hover { background: #1e4620; color: #fff; }
  .results-count { font-size: 1.1rem; font-weight: 600; color: #333; }

  .card-activity-link { text-decoration: none; color: inherit; display: block; height: 100%; }
  .card-activity-link:hover { color: inherit; }
  .card-activity .btn-reserve { position: relative; z-index: 2; }
</style>
{% endblock %}

{% block body %}

{% set selectedCategory = selectedCategory|default(null) %}
{% set filterMinPrice = filterMinPrice|default(null) %}
{% set filterMaxPrice = filterMaxPrice|default(null) %}
{% set sidebarCategories = sidebarCategories|default([]) %}
{# Use categories provided by controller instead of a hard-coded list #}
{% set categoryNames = sidebarCategories is iterable ? sidebarCategories : [] %}
<!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
        <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="page-cover text-center">
                <h2 class="page-cover-tittle">Activit√©s</h2>
                <p class="mb-0 opacity-90">D√©couvrez les exp√©riences, horaires et guides</p>

            </div>
        </div>
    </section>
    <!--================Breadcrumb Area =================-->



<div class="container-fluid py-4">
    <div class="row">
        {# ========== LEFT SIDEBAR ‚Äì FILTRER PAR ========== #}
        <div class="col-lg-3 mb-4 mb-lg-0">
            <aside class="filter-sidebar-panel">
                <div class="panel-head">Filtrer par</div>
                <div class="panel-body">
                    {# Prix #}
                    <div class="filter-section">
                    <div class="filter-label">Filtrer par prix (DT)</div>
                        <form method="get" action="{{ selectedCategory ? path('activities_by_category', {'categoryId': selectedCategory}) : path('app_activites') }}">
                        <div class="price-inputs">
                                <input type="number" name="minPrice" class="form-control form-control-sm" placeholder="Min" step="0.01" min="0" value="{{ filterMinPrice is not null ? filterMinPrice : '' }}">
                                <input type="number" name="maxPrice" class="form-control form-control-sm" placeholder="Max" step="0.01" min="0" value="{{ filterMaxPrice is not null ? filterMaxPrice : '' }}">
                            </div>
                            <button type="submit" class="btn btn-apply-filter btn-sm">Appliquer</button>
                        </form>
                    </div>

                    {# Type de l'√©v√©nement #}
                    <div class="filter-section">
                        <div class="filter-label">Type de l'activit√©</div>
                        <form method="get" id="categoryFilterForm" action="{{ selectedCategory ? path('activities_by_category', {'categoryId': selectedCategory}) : path('app_activites') }}">
                        {% for cat in sidebarCategories %}
                                    <option value="{{ cat.id }}" {% if selectedCategory is not null and selectedCategory == cat.id %}selected{% endif %}>
                                        {{ cat.name }}
                                    </option>
                                    {% endfor %}
                            </select>
                        </form>
                        <script>
                            function handleCategoryChange() {
                                const select = document.getElementById('categorySelect');
                                const categoryId = select.value;
                                const minPrice = new URLSearchParams(window.location.search).get('minPrice');
                                const maxPrice = new URLSearchParams(window.location.search).get('maxPrice');
                                
                                let url = '{{ path("app_activites") }}';
                                if (categoryId) {
                                    url = '/activities/category/' + categoryId;
                                }
                                
                                const params = new URLSearchParams();
                                if (minPrice) params.append('minPrice', minPrice);
                                if (maxPrice) params.append('maxPrice', maxPrice);
                                
                                const queryString = params.toString();
                                if (queryString) {
                                    url += '?' + queryString;
                                }
                                
                                window.location.href = url;
                            }
                        </script>
                    </div>
                </div>
            </aside>
        </div>

        {# ========== RIGHT: R√âSULTATS + CARTES ========== #}
        <div class="col-lg-9">
            <p class="results-count mb-4">{{ activities|length }} Activit√©(s) trouv√©(s)</p>

            <div class="row">
                {% for activity in activities %}
                    <div class="col-md-6 col-xl-4 mb-4">
                        <a href="{{ path('app_activity_show', { id: activity.id }) }}" class="card-activity-link">
                            <div class="card card-activity h-100 border-0 shadow-sm">

                                <div class="img-wrap">
                                    {% if activity.image %}
                                        <img src="{{ asset(activity.image) }}" alt="{{ activity.title }}">
                                    {% else %}
                                        <img src="{{ asset('images/room' ~ (((activity.id ?? 0) % 4) + 1) ~ '.jpg') }}" alt="{{ activity.title }}">
                                    {% endif %}
                                    <div class="img-overlay d-flex flex-column justify-content-between">
                                        <span class="img-overlay-location">{{ activity.location|default(activity.title) }}</span>
                                        {% if activity.category %}
                                            <span class="img-overlay-type">{{ activity.category.name }}</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="card-body">
                                    {% if activity.category %}
                                        <span class="category-pill">{{ activity.category.name }}</span>
                                    {% endif %}

                                    <h5 class="card-title mb-2" style="font-size: 1.05rem;">{{ activity.title }}</h5>

                                    <div class="activity-details">
                                        {% if activity.schedules|length > 0 %}
                                            {% set firstSchedule = activity.schedules|first %}
                                            <span title="Date">üìÖ {{ firstSchedule.startAt|date('d-m-Y') }}</span>
                                        {% endif %}
                                        {% if activity.maxParticipants %}
                                            <span title="Participants">üë• {{ activity.maxParticipants }}</span>
                                        {% endif %}
                                        {% if activity.durationMinutes %}
                                            <span title="Dur√©e">üïê {{ activity.durationMinutes >= 60 ? (activity.durationMinutes / 60)|round(1, 'floor') ~ ' h' : activity.durationMinutes ~ ' min' }}</span>
                                        {% endif %}
                                        {% if activity.price is defined and activity.price is not null %}
                                            <span title="Prix">‚ö° {{ activity.price|number_format(2, ',', ' ') }} DT /personne</span>
                                        {% endif %}
                                    </div>

                                    {% if activity.guide %}
                                        <p class="small text-muted mb-2">
                                            Guide : {{ activity.guide.firstName }} {{ activity.guide.lastName }}
                                            {% if activity.guide.rating %}<span class="text-warning">‚òÖ {{ activity.guide.rating }}</span>{% endif %}
                                        </p>
                                    {% endif %}

                                    <span class="btn btn-reserve btn-sm d-block text-center">Voir l'activit√© & r√©server</span>
                                </div>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-light border text-center py-4">
                            Aucune Activit√© trouv√©. Essayez d'ajuster les filtres.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
                        
