    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add to cart functionality
            document.querySelectorAll('.btn-add-cart').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    // Add loading state
                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="fa fa-spinner fa-spin"></i>';
                    this.disabled = true;

                    fetch(this.dataset.url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                        .then(r => r.json())
                        .then(d => {
                            if (d.success) {
                                // Success animation
                                this.innerHTML = '<i class="fa fa-check"></i>';
                                this.style.background = '#28a745';
                                this.style.borderColor = '#28a745';
                                this.style.color = 'white';

                                // Update cart badge if function exists
                                if (typeof updateCartBadge === 'function') {
                                    updateCartBadge(d.count);
                                }

                                // Reset after 2 seconds
                                setTimeout(() => {
                                    this.innerHTML = originalHTML;
                                    this.disabled = false;
                                    this.style.background = '';
                                    this.style.borderColor = '';
                                    this.style.color = '';
                                }, 2000);
                            } else {
                                // Error state
                                this.innerHTML = '<i class="fa fa-times"></i>';
                                this.style.background = '#dc3545';
                                this.disabled = false;
                                setTimeout(() => {
                                    this.innerHTML = originalHTML;
                                    this.style.background = '';
                                }, 2000);
                            }
                        })
                        .catch(err => {
                            console.error('Error:', err);
                            this.innerHTML = originalHTML;
                            this.disabled = false;
                        });
                });
            });

            // Smooth scroll for filter changes
            const filterForm = document.querySelector('#categoryFilterForm');
            if (filterForm) {
                filterForm.addEventListener('submit', function(e) {
                    document.querySelector('.results-header').scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                });
            }

            // Parallax effect on scroll
            window.addEventListener('scroll', function() {
                const hero = document.querySelector('.activities-hero::before');
                if (hero) {
                    const scrolled = window.pageYOffset;
                    hero.style.transform = `translateY(${scrolled * 0.5}px)`;
                }
            });
        });
    </script>
