            <!-- Sidebar Filtres -->
            <div class="col-lg-2 col-xl-2 mb-4 mb-lg-0">
                <aside class="filter-sidebar-panel">
                    <div class="panel-head">üîç Filtres</div>
                    <div class="panel-body">
                        <!-- Prix -->
                        <div class="filter-section">
                            <div class="filter-label">Prix (DT)</div>
                            <form method="get" action="{{ path('app_activites') }}">
                                {% if selectedCategory %}<input type="hidden" name="category" value="{{ selectedCategory }}">{% endif %}
                                <div class="price-inputs">
                                    <input type="number" name="minPrice" placeholder="Min" step="0.01" min="0" value="{{ filterMinPrice }}">
                                    <input type="number" name="maxPrice" placeholder="Max" step="0.01" min="0" value="{{ filterMaxPrice }}">
                                </div>
                                <button type="submit" class="btn-apply-filter">Appliquer</button>
                            </form>
                        </div>

                        <!-- Cat√©gories -->
                        <div class="filter-section">
                            <div class="filter-label">Type d'activit√©</div>
                            <form method="get" action="{{ path('app_activites') }}">
                                {% if filterMinPrice %}<input type="hidden" name="minPrice" value="{{ filterMinPrice }}">{% endif %}
                                {% if filterMaxPrice %}<input type="hidden" name="maxPrice" value="{{ filterMaxPrice }}">{% endif %}
                                <select name="category" class="form-select" onchange="this.form.submit()">
                                    <option value="">Toutes les cat√©gories</option>
                                    {% for cat in sidebarCategories %}
                                        <option value="{{ cat.id }}" {% if selectedCategory == cat.id %}selected{% endif %}>
                                            {{ cat.name }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </form>
                        </div>
                    </div>
                </aside>
            </div>

            <!-- R√©sultats -->
            <div class="col-lg-10 col-xl-10">
                <div class="results-header">
                    <div class="results-count">
                        {{ activities|length }} Activit√©{{ activities|length > 1 ? 's' : '' }} trouv√©e{{ activities|length > 1 ? 's' : '' }}
                    </div>
                </div>

                {% if activities|length > 0 %}
                    <div class="row g-5">
                        {% for activity in activities %}
                            <div class="col-md-6 col-lg-4">
                                <div class="card-activity">
                                    <a href="#" class="card-activity-link">
                                        <div class="img-wrap">
                                            <img src="{{ activity.image ? asset(activity.image) : asset('images/room' ~ (((activity.id ?? 0) % 4) + 1) ~ '.jpg') }}" alt="{{ activity.title }}">
                                            <div class="img-overlay">
                                                <span class="img-overlay-location">{{ activity.location|default('Tunisie') }}</span>
                                                {% if activity.category %}
                                                    <span class="img-overlay-type">{{ activity.category.name }}</span>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="card-body">
                                            {% if activity.category %}
                                                <span class="category-pill">{{ activity.category.name }}</span>
                                            {% endif %}
                                            <h5 class="card-title">{{ activity.title }}</h5>

                                            <div class="activity-details">
                                                {% if activity.schedules|length > 0 %}
                                                    {% set first = activity.schedules|first %}
                                                    <span>üìÖ {{ first.startAt|date('d/m/Y') }}</span>
                                                {% endif %}
                                                {% if activity.maxParticipants %}
                                                    <span>üë• {{ activity.maxParticipants }} pers.</span>
                                                {% endif %}
                                                {% if activity.durationMinutes %}
                                                    <span>üïê {{ activity.durationMinutes >= 60 ? (activity.durationMinutes / 60)|round(1) ~ 'h' : activity.durationMinutes ~ 'min' }}</span>
                                                {% endif %}
                                                {% if activity.price is defined and activity.price is not null %}
                                                    <span>üí∞ {{ activity.price|number_format(2) }} DT</span>
                                                {% endif %}
                                            </div>

                                            {% if activity.guide %}
                                                <div class="guide-info">
                                                    Guide : {{ activity.guide.firstName }} {{ activity.guide.lastName }}
                                                    {% if activity.guide.rating %}
                                                        <span class="text-warning">‚òÖ {{ activity.guide.rating }}</span>
                                                    {% endif %}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </a>

                                    <div class="card-body pt-0">
                                        <div class="btn-actions">
                                            <button
                                                    type="button"
                                                    class="btn-reserve"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#activityModal"
                                                    data-activity-id="{{ activity.id }}"
                                                    data-activity-title="{{ activity.title|escape('html_attr') }}"
                                                    data-activity-description="{{ activity.description|default('')|escape('html_attr') }}"
                                                    data-activity-price="{{ activity.price|default('0') }}"
                                                    data-activity-duration="{{ activity.durationMinutes|default('0') }}"
                                                    data-activity-location="{{ activity.location|default('Tunisie')|escape('html_attr') }}"
                                                    data-activity-max-participants="{{ activity.maxParticipants|default('') }}"
                                                    data-activity-category="{{ activity.category ? activity.category.name|escape('html_attr') : '' }}"
                                                    data-activity-guide="{{ activity.guide ? (activity.guide.firstName ~ ' ' ~ activity.guide.lastName)|escape('html_attr') : '' }}"
                                                    data-activity-image="{{ activity.image ? asset(activity.image) : asset('images/room' ~ (((activity.id ?? 0) % 4) + 1) ~ '.jpg') }}"
                                                    data-activity-schedules="{{ activity.schedules|length > 0 ? (activity.schedules|first).startAt|date('d/m/Y H:i') : '' }}">
                                                Voir d√©tails
                                            </button>

                                            <button type="button" class="btn-add-cart" data-url="{{ path('app_panier_add_activity', {id: activity.id}) }}">
                                                <i class="fa fa-cart-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="empty-state">
                        <div class="empty-state-icon">üîç</div>
                        <h3>Aucune activit√© trouv√©e</h3>
                        <p>Essayez d'ajuster vos filtres pour voir plus de r√©sultats</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="activityModal" tabindex="-1" aria-labelledby="activityModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="activityModalLabel">D√©tails de l'activit√©</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modalContent">
                    <!-- Charg√© dynamiquement -->
                </div>
            </div>
        </div>
    </div>

    <!-- Chatbot -->
    <div class="chatbot-float">
        <button class="chatbot-btn" id="openChat">
            <i class="fa fa-comment-dots"></i>
            <span class="chatbot-badge" id="chatNotification">1</span>
        </button>
    </div>

    <div class="chatbot-window" id="chatWindow">
        <div class="chat-header">
            <h5>üåø EcoTrip Assistant</h5>
            <button class="btn-close btn-close-white" id="closeChat"></button>
        </div>
        <div class="chat-body" id="chatMessages"></div>
        <div class="chat-footer">
            <input type="text" class="chat-input" id="chatInput" placeholder="Demande-moi n'importe quoi sur ton voyage...">
            <button class="chat-send" id="sendMessage"><i class="fa fa-paper-plane"></i></button>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // ‚îÄ‚îÄ MODAL ‚îÄ‚îÄ Chargement dynamique au show
            const modalElement = document.getElementById('activityModal');
            if (modalElement) {
                modalElement.addEventListener('show.bs.modal', function (event) {
                    // Le bouton qui a d√©clench√© le modal
                    const button = event.relatedTarget;
                    if (!button) return;

                    const data = {
                        id: button.dataset.activityId || 'inconnu',
                        title: button.dataset.activityTitle || 'Activit√© sans titre',
                        description: button.dataset.activityDescription || 'Aucune description disponible.',
                        price: parseFloat(button.dataset.activityPrice) || 0,
                        duration: parseInt(button.dataset.activityDuration) || 0,
                        location: button.dataset.activityLocation || 'Tunisie',
                        maxParticipants: button.dataset.activityMaxParticipants || '',
                        category: button.dataset.activityCategory || '',
                        guide: button.dataset.activityGuide || 'Non sp√©cifi√©',
                        image: button.dataset.activityImage || 'https://via.placeholder.com/800x400?text=Image+non+disponible',
                        schedules: button.dataset.activitySchedules || 'Non planifi√©'
                    };

                    const content = `
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-5">
                                    <img src="${data.image}" alt="${data.title}" class="modal-activity-image img-fluid rounded">
                                </div>
                                <div class="col-md-7">
                                    <h3 class="mb-3">${data.title}</h3>
                                    ${data.category ? `<span class="category-pill">${data.category}</span>` : ''}

                                    <div class="modal-detail-section mt-4">
                                        <h6>Informations</h6>
                                        <div class="modal-info-grid">
                                            <div class="modal-info-item"><label>Prix</label><span>${data.price.toFixed(2)} DT</span></div>
                                            <div class="modal-info-item"><label>Dur√©e</label><span>${data.duration >= 60 ? (Math.round(data.duration / 60 * 10)/10 + ' h') : data.duration + ' min'}</span></div>
                                            <div class="modal-info-item"><label>Lieu</label><span>${data.location}</span></div>
                                            ${data.maxParticipants ? `<div class="modal-info-item"><label>Max pers.</label><span>${data.maxParticipants}</span></div>` : ''}
                                            <div class="modal-info-item"><label>Guide</label><span>${data.guide}</span></div>
                                            ${data.schedules ? `<div class="modal-info-item"><label>Prochain d√©part</label><span>${data.schedules}</span></div>` : ''}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-4">
                                <div class="col-12">
                                    <h6>Description</h6>
                                    <div class="modal-description">${data.description}</div>
                                </div>
                            </div>

                            <div class="modal-actions mt-4">
                                <button class="modal-btn-reserve">R√©server maintenant</button>
                                <button class="modal-btn-cart btn-add-cart" data-url="/panier/add-activity/${data.id}">
                                    Ajouter au panier
                                </button>
                            </div>
                        </div>
                    `;

                    document.getElementById('modalContent').innerHTML = content;
                    document.getElementById('activityModalLabel').textContent = data.title;
                });
            } else {
                console.error('[MODAL] #activityModal non trouv√© dans le DOM');
            }

            // ‚îÄ‚îÄ Add to cart (ton code existant) ‚îÄ‚îÄ
            document.querySelectorAll('.btn-add-cart').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const originalHTML = this.innerHTML;
                    this.innerHTML = '<i class="fa fa-spinner fa-spin"></i>';
                    this.disabled = true;

                    fetch(this.dataset.url, {
                        method: 'POST',
                        headers: { 'X-Requested-With': 'XMLHttpRequest' }
                    })
                        .then(r => r.json())
                        .then(d => {
                            if (d.success) {
                                this.innerHTML = '<i class="fa fa-check"></i>';
                                this.style.background = '#28a745';
                                this.style.borderColor = '#28a745';
                                this.style.color = 'white';

                                if (typeof updateCartBadge === 'function') {
                                    updateCartBadge(d.count);
                                }

                                setTimeout(() => {
                                    this.innerHTML = originalHTML;
                                    this.disabled = false;
                                    this.style.background = '';
                                    this.style.borderColor = '';
                                    this.style.color = '';
                                }, 2000);
                            } else {
                                this.innerHTML = '<i class="fa fa-times"></i>';
                                this.style.background = '#dc3545';
                                setTimeout(() => {
                                    this.innerHTML = originalHTML;
                                    this.style.background = '';
                                }, 2000);
                            }
                        })
                        .catch(err => {
                            console.error('Error:', err);
                            this.innerHTML = originalHTML;
                            this.disabled = false;
                        });
                });
            });

            // ‚îÄ‚îÄ Chatbot (inchang√©) ‚îÄ‚îÄ
            const chatWindow = document.getElementById('chatWindow');
            const openChatBtn = document.getElementById('openChat');
            const closeChatBtn = document.getElementById('closeChat');
            const chatInput = document.getElementById('chatInput');
            const sendBtn = document.getElementById('sendMessage');
            const chatMessages = document.getElementById('chatMessages');
            const notification = document.getElementById('chatNotification');

            let firstOpen = true;

            function addMessage(text, isBot = true) {
                const div = document.createElement('div');
                div.className = `chat-message ${isBot ? 'bot' : 'user'}`;
                div.innerHTML = text;
                chatMessages.appendChild(div);
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            async function sendMessage() {
                const msg = chatInput.value.trim();
                if (!msg) return;

                addMessage(msg, false);
                chatInput.value = '';

                const typing = document.createElement('div');
                typing.className = 'chat-typing';
                typing.textContent = 'EcoTrip AI r√©fl√©chit...';
                chatMessages.appendChild(typing);
                chatMessages.scrollTop = chatMessages.scrollHeight;

                try {
                    const res = await fetch('/api/ecotrip-ai', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ message: msg })
                    });
                    const data = await res.json();

                    typing.remove();

                    if (data.error) {
                        addMessage(`<strong>Oups !</strong> ${data.error}`);
                    } else if (data.intro) {
                        let reply = `<strong>${data.intro}</strong><br><br>`;
                        if (data.recommendations?.length) {
                            data.recommendations.forEach(r => {
                                reply += `üåü <b>${r.title}</b><br>${r.description}<br>`;
                                if (r.details) reply += `üí∞ ${r.details.price} DT ‚Ä¢ ${r.details.duration} ‚Ä¢ ${r.details.location}<br><br>`;
                            });
                        }
                        if (data.schedule?.length) {
                            reply += `<b>Planning :</b><br>`;
                            data.schedule.forEach(s => reply += `üïí ${s.time} ‚Üí ${s.activity}<br>`);
                        }
                        if (data.next_steps) reply += `<em>${data.next_steps}</em>`;
                        addMessage(reply);
                    } else {
                        addMessage("Hmm... peux-tu reformuler ? üòÖ");
                    }
                } catch (err) {
                    typing.remove();
                    addMessage("D√©sol√©, petite panne de connexion... R√©essaie ?");
                    console.error(err);
                }
            }

            openChatBtn.onclick = () => {
                chatWindow.style.display = 'flex';
                openChatBtn.style.display = 'none';
                if (notification) notification.style.display = 'none';
                if (firstOpen) {
                    addMessage("Salut Hassan ! üåø Je suis ton assistant EcoTrip.<br>Tu veux des id√©es d‚Äôactivit√©s √† Tunis, un h√©bergement √† Djerba, un transport pour le d√©sert ou un programme complet ? Dis-moi tout !", true);
                    firstOpen = false;
                }
                chatInput.focus();
            };

            closeChatBtn.onclick = () => {
                chatWindow.style.display = 'none';
                openChatBtn.style.display = 'flex';
            };

            sendBtn.onclick = sendMessage;
            chatInput.onkeypress = e => { if (e.key === 'Enter') { e.preventDefault(); sendMessage(); } };
        });
    </script>

{% endblock %}