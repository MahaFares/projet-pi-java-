{{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

<div class="form-group">
    {{ form_label(form.type, null, { label_attr: { class: 'form-label' } }) }}
    {{ form_widget(form.type, { attr: { class: 'form-input' ~ (form.type.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Ex: Bus, Minivan' } }) }}
    {% if form.type.vars.errors|length > 0 %}
        <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.type) }}</div>
    {% endif %}
</div>

<div class="form-row">
    <div class="form-group">
        {{ form_label(form.capacite, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.capacite, { attr: { class: 'form-input' ~ (form.capacite.vars.errors|length ? ' is-invalid' : ''), placeholder: '8', min: 1 } }) }}
        {% if form.capacite.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.capacite) }}</div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.emissionco2, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.emissionco2, { attr: { class: 'form-input' ~ (form.emissionco2.vars.errors|length ? ' is-invalid' : ''), placeholder: '50.5', step: '0.01' } }) }}
        {% if form.emissionco2.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.emissionco2) }}</div>
        {% endif %}
    </div>
</div>

<div class="form-row">
    <div class="form-group">
        {{ form_label(form.prixparpersonne, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.prixparpersonne, { attr: { class: 'form-input' ~ (form.prixparpersonne.vars.errors|length ? ' is-invalid' : ''), placeholder: '25.50', step: '0.01' } }) }}
        {% if form.prixparpersonne.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.prixparpersonne) }}</div>
        {% endif %}
    </div>
    <div class="form-group d-flex align-items-end">
        <div class="form-check">
            {{ form_widget(form.disponible, { attr: { class: 'form-check-input' } }) }}
            {{ form_label(form.disponible, null, { label_attr: { class: 'form-check-label' } }) }}
        </div>
    </div>
</div>

<div class="form-actions">
    <button type="submit" class="modern-btn btn-submit"><i class="bi bi-check"></i> {{ button_label|default('Enregistrer') }}</button>
    <a href="{{ path('app_trajet_index') }}" class="modern-btn btn-cancel"><i class="bi bi-x"></i> Annuler</a>
</div>

{{ form_end(form) }}
