{% extends 'BackOffice/base.html.twig' %}

{% block title %}Trajets - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Trajets</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Capacité</th>
                <th>Prix/Personne</th>
                <th>CO2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td>{{ transport.id }}</td>
                <td>{{ transport.type }}</td>
                <td>{{ transport.capacite }}</td>
                <td>{{ transport.prixparpersonne }} DT</td>
                <td>{{ transport.emissionco2 }} kg</td>
                <td>
                    <a href="{{ path('app_trajet_show', {'id': transport.id}) }}">Voir</a>
                    <a href="{{ path('app_trajet_edit', {'id': transport.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-muted">Aucun trajet.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_trajet_new') }}" class="btn btn-success">Créer un trajet</a>
</div>
{% endblock %}
