<form method="post" action="{{ path('app_trajet_delete', {'id': transport.id}) }}" onsubmit="return confirm('Supprimer ce trajet ?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transport.id) }}">
    <button type="submit" class="modern-btn" style="background:#fef2f2;color:#dc2626;border:2px solid #fecaca;">
        <i class="bi bi-trash"></i> Supprimer
    </button>
</form>
