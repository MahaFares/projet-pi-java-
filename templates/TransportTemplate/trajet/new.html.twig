{% extends 'BackOffice/base.html.twig' %}

{% block title %}Cr√©er un trajet - Admin{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<style>
.modern-form-wrapper { max-width: 700px; margin: 0 auto; padding: 2rem; }
.form-header { background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%); color: white; padding: 2rem; border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 8px 24px rgba(74, 144, 226, 0.3); }
.form-header h1 { margin: 0; font-size: 1.75rem; font-weight: 700; display: flex; align-items: center; gap: 0.75rem; }
.form-card { background: white; border-radius: 16px; padding: 2.5rem; box-shadow: 0 4px 20px rgba(0,0,0,0.08); }
.form-group { margin-bottom: 1.75rem; }
.form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
@media (max-width: 768px) { .form-row { grid-template-columns: 1fr; } }
.form-label { font-size: 0.95rem; font-weight: 600; color: #1e293b; margin-bottom: 0.5rem; display: block; }
.form-input { width: 100%; padding: 0.875rem 1rem; font-size: 1rem; border: 2px solid #e2e8f0; border-radius: 10px; transition: all 0.2s; }
.form-input:focus { outline: none; border-color: #4A90E2; box-shadow: 0 0 0 4px rgba(74, 144, 226, 0.1); }
.form-input.is-invalid { border-color: #ef4444; background: #fef2f2; }
.error-message { color: #ef4444; font-size: 0.875rem; margin-top: 0.5rem; }
.form-actions { display: flex; gap: 1rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 2px solid #f1f5f9; }
.modern-btn { padding: 0.875rem 2rem; font-size: 1rem; font-weight: 600; border: none; border-radius: 10px; cursor: pointer; display: inline-flex; align-items: center; gap: 0.5rem; text-decoration: none; }
.btn-submit { background: linear-gradient(135deg, #4A90E2, #357ABD); color: white; }
.btn-cancel { background: #f1f5f9; color: #475569; border: 2px solid #e2e8f0; }
.form-check { display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem 0; }
.form-global-errors { background: #fef2f2; border: 2px solid #ef4444; color: #991b1b; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {{ include('admin_nav.html.twig') }}
    <div class="modern-form-wrapper">
        <div class="form-header">
            <h1><i class="bi bi-plus-circle"></i> Nouveau trajet</h1>
        </div>
        <div class="form-card">
            {% if form.vars.errors|length > 0 %}
            <div class="form-global-errors">
                <strong><i class="bi bi-exclamation-triangle"></i> Erreurs de saisie :</strong>
                <ul class="mb-0">{% for error in form.vars.errors %}<li>{{ error.message }}</li>{% endfor %}</ul>
            </div>
            {% endif %}
            {{ include('TransportTemplate/trajet/_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
