{% for category in categories %}
    <tr>
        <td>{{ category.id }}</td>
        <td>
            <div class="user-avatar-placeholder">{{ category.name|slice(0, 1)|upper }}</div>
            {{ category.name }}
        </td>
        <td>{{ category.transports|length }}</td>
        <td>
            <div class="d-flex gap-2">
                <a href="{{ path('app_transport_category_show', {'id': category.id}) }}" class="btn-action view" title="Voir">
                    <i class="fa fa-eye"></i>
                </a>
                <a href="{{ path('app_transport_category_edit', {'id': category.id}) }}" class="btn-action edit" title="Modifier">
                    <i class="fa fa-edit"></i>
                </a>
                <form method="post" action="{{ path('app_transport_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Êtes-vous sûr ?');" style="display:inline-block">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                    <button class="btn-action delete" title="Supprimer">
                        <i class="fa fa-trash"></i>
                    </button>
                </form>
            </div>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="4" class="text-center py-4 text-muted">Aucune catégorie trouvée.</td>
    </tr>
{% endfor %}
