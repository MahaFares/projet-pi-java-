{% extends 'BackOffice/base.html.twig' %}

{% block title %}{{ transport.type }} - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>{{ transport.type }}</h1>
    
    <div class="row">
        <div class="col-md-4">
            {% if transport.image %}
                <img src="{{ asset('uploads/transports/' ~ transport.image) }}" alt="{{ transport.type }}" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover;">
            {% else %}
                <div class="bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="height: 300px;">
                    <p class="text-muted">Aucune image</p>
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold; width: 30%;">Id</th>
                        <td>{{ transport.id }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Type</th>
                        <td>{{ transport.type }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Capacité</th>
                        <td>{{ transport.capacite }} passagers</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Prix/Personne</th>
                        <td>{{ transport.prixparpersonne }} DT</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Émission CO2</th>
                        <td>{{ transport.emissionco2 }} kg</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <div style="margin-top: 30px;">
        <a href="{{ path('app_transport_edit', {'id': transport.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_transport_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
    
    <div style="margin-top: 20px;">
        {{ include('TransportTemplate/transport/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
