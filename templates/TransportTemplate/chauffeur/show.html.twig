{% extends 'BackOffice/base.html.twig' %}

{% block title %}{{ chauffeur.fullName }} | Admin{% endblock %}
{% block page_title %}{{ chauffeur.fullName }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card shadow-sm" style="max-width: 560px;">
        <div class="card-body">
            <p><strong>Nom:</strong> {{ chauffeur.firstName }} {{ chauffeur.lastName }}</p>
            <p><strong>Téléphone:</strong> {{ chauffeur.phone }}</p>
            <p><strong>Numéro de permis:</strong> {{ chauffeur.licenseNumber }}</p>
            <p><strong>Expérience:</strong> {{ chauffeur.experience }} ans</p>
            <p><strong>Note:</strong> {{ chauffeur.rating }}/5</p>
            <a href="{{ path('app_chauffeur_edit', {id: chauffeur.id}) }}" class="btn btn-primary">Éditer</a>
            <a href="{{ path('app_chauffeur_index') }}" class="btn btn-outline-secondary">Liste</a>
        </div>
    </div>
</div>
{% endblock %}
