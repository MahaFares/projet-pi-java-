        {% if form.rating.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.rating) }}</div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.photo, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.photo, { attr: { class: 'form-input' ~ (form.photo.vars.errors|length ? ' is-invalid' : ''), placeholder: 'https://example.com/photo.jpg' } }) }}
