{{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

<div class="form-row">
    <div class="form-group">
        {{ form_label(form.firstName, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.firstName, { attr: { class: 'form-input' ~ (form.firstName.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Ex: Jean' } }) }}
        {% if form.firstName.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.firstName) }}</div>
        {% endif %}
    </div>
    <div class="form-group">
        {{ form_label(form.lastName, null, { label_attr: { class: 'form-label' } }) }}
        {{ form_widget(form.lastName, { attr: { class: 'form-input' ~ (form.lastName.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Ex: Dupont' } }) }}
        {% if form.lastName.vars.errors|length > 0 %}
            <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.lastName) }}</div>
        {% endif %}
    </div>
</div>

<div class="form-row">
    <div class="form-group">
        {{ form_label(form.email, null, { label_attr: { class: 'form-label' } }) }}
