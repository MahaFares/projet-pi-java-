    {{ form_widget(form.bio, { attr: { class: 'form-textarea' ~ (form.bio.vars.errors|length ? ' is-invalid' : ''), placeholder: 'Parlez de votre expÃ©rience...', rows: 5 } }) }}
    {% if form.bio.vars.errors|length > 0 %}
        <div class="error-message"><i class="bi bi-exclamation-circle"></i> {{ form_errors(form.bio) }}</div>
    {% endif %}
</div>

<div class="form-row">
    <div class="form-group">
        {{ form_label(form.rating, null, { label_attr: { class: 'form-label' } }) }}
