{% extends 'BackOffice/base.html.twig' %}

{% block title %}{{ guide.firstName }} {{ guide.lastName }} - Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        .detail-header { background: linear-gradient(135deg, #059669 0%, #047857 100%); color: white; padding: 2rem; border-radius: 16px; margin-bottom: 2rem; box-shadow: 0 8px 24px rgba(5, 150, 105, 0.25); }
        .detail-header h1 { margin: 0; font-size: 1.75rem; font-weight: 700; display: flex; align-items: center; gap: 0.75rem; }
        .detail-card { background: white; border-radius: 16px; padding: 2rem; box-shadow: 0 4px 20px rgba(0,0,0,0.08); margin-bottom: 1.5rem; }
        .guide-profile { display: flex; gap: 2rem; flex-wrap: wrap; margin-bottom: 2rem; }
        .guide-photo-wrap { flex-shrink: 0; }
        .guide-photo { width: 120px; height: 120px; border-radius: 16px; object-fit: cover; border: 4px solid #e2e8f0; }
        .guide-photo-placeholder { width: 120px; height: 120px; border-radius: 16px; background: linear-gradient(135deg, #d1fae5, #a7f3d0); display: flex; align-items: center; justify-content: center; font-size: 3rem; color: #059669; }
        .guide-meta { flex: 1; min-width: 200px; }
        .guide-meta h2 { margin: 0 0 0.5rem 0; font-size: 1.5rem; }
        .rating-badge { display: inline-flex; align-items: center; gap: 4px; padding: 6px 12px; background: #fef3c7; color: #92400e; border-radius: 20px; font-weight: 600; margin-top: 0.5rem; }
        .info-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 1rem; }
        .info-item { padding: 1rem; background: #f8fafc; border-radius: 10px; }
        .info-item label { font-size: 0.75rem; color: #64748b; text-transform: uppercase; letter-spacing: 0.05em; display: block; margin-bottom: 0.25rem; }
        .info-item span, .info-item a { font-weight: 600; color: #0f172a; text-decoration: none; }
        .bio-block { padding: 1rem; background: #f8fafc; border-radius: 10px; color: #475569; line-height: 1.6; white-space: pre-wrap; }
        .form-actions { display: flex; gap: 1rem; margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid #e2e8f0; flex-wrap: wrap; }
        .modern-btn { padding: 0.75rem 1.5rem; font-weight: 600; border-radius: 10px; text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; transition: all 0.2s; }
        .btn-primary-custom { background: linear-gradient(135deg, #059669, #047857); color: white; }
        .btn-secondary-custom { background: #f1f5f9; color: #475569; border: 2px solid #e2e8f0; }
        .modern-btn:hover { transform: translateY(-2px); }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {{ include('admin_nav.html.twig') }}

    <div class="detail-header">
        <h1><i class="bi bi-person-badge"></i> {{ guide.firstName }} {{ guide.lastName }}</h1>
        {% if guide.rating is not null %}
            <span class="rating-badge mt-2"><i class="bi bi-star-fill"></i> {{ guide.rating }}/5</span>
        {% endif %}
    </div>

    <div class="detail-card">
        <div class="guide-profile">
            <div class="guide-photo-wrap">
                {% if guide.photo %}
                    <img src="{{ guide.photo starts with 'http' ? guide.photo : asset(guide.photo) }}" alt="" class="guide-photo">
                {% else %}
                    <div class="guide-photo-placeholder"><i class="bi bi-person"></i></div>
                {% endif %}
            </div>
            <div class="guide-meta">
                <h2>{{ guide.firstName }} {{ guide.lastName }}</h2>
                {% if guide.email %}
                    <a href="mailto:{{ guide.email }}"><i class="bi bi-envelope"></i> {{ guide.email }}</a>
                {% endif %}
                {% if guide.phone %}
                    <p class="mb-0 mt-2"><i class="bi bi-telephone"></i> {{ guide.phone }}</p>
                {% endif %}
            </div>
        </div>

        <div class="info-grid mb-4">
            <div class="info-item">
                <label>ID</label>
                <span>#{{ guide.id }}</span>
            </div>
            <div class="info-item">
                <label>Prénom</label>
                <span>{{ guide.firstName }}</span>
            </div>
            <div class="info-item">
                <label>Nom</label>
                <span>{{ guide.lastName }}</span>
            </div>
            <div class="info-item">
                <label>Email</label>
                <span><a href="mailto:{{ guide.email }}">{{ guide.email }}</a></span>
            </div>
            <div class="info-item">
                <label>Téléphone</label>
                <span>{{ guide.phone }}</span>
            </div>
            <div class="info-item">
                <label>Note</label>
                <span>{{ guide.rating|default('–') }}</span>
            </div>
        </div>

        {% if guide.bio %}
            <div class="mb-4">
                <label class="d-block fw-bold text-muted small text-uppercase mb-2">Biographie</label>
                <div class="bio-block">{{ guide.bio }}</div>
            </div>
        {% endif %}

        <div class="form-actions">
            <a href="{{ path('app_guide_edit', {'id': guide.id}) }}" class="modern-btn btn-primary-custom">
                <i class="bi bi-pencil"></i> Modifier
            </a>
            <a href="{{ path('app_guide_index') }}" class="modern-btn btn-secondary-custom">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
            {{ include('ActivityTemplate/guide/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
