{% extends 'base.html.twig' %}

{% block title %}{{ activity.title }} - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>{{ activity.title }}</h1>
    
    <div class="row">
        <div class="col-md-4">
            {% if activity.image %}
                <img src="{{ asset(activity.image) }}" alt="{{ activity.title }}" class="img-fluid rounded mb-3" style="max-height: 300px; object-fit: cover;">
            {% else %}
                <div class="bg-light rounded mb-3 d-flex align-items-center justify-content-center" style="height: 300px;">
                    <p class="text-muted">Aucune image</p>
                </div>
            {% endif %}
        </div>
        <div class="col-md-8">
            <table class="table table-borderless">
                <tbody>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold; width: 30%;">Id</th>
                        <td>{{ activity.id }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Titre</th>
                        <td>{{ activity.title }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Description</th>
                        <td>{{ activity.description }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Prix</th>
                        <td>{{ activity.price }} €</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Durée (min)</th>
                        <td>{{ activity.durationMinutes }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Lieu</th>
                        <td>{{ activity.location }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Max participants</th>
                        <td>{{ activity.maxParticipants|default('–') }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Actif</th>
                        <td>{{ activity.isActive ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Catégorie</th>
                        <td>{{ activity.category ? activity.category.name : '–' }}</td>
                    </tr>
                    <tr>
                        <th style="color: #2d5016; font-weight: bold;">Guide</th>
                        <td>{{ activity.guide ? activity.guide.firstName ~ ' ' ~ activity.guide.lastName : '–' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
    <div style="margin-top: 30px;">
        <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_activity_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
    
    <div style="margin-top: 20px;">
        {{ include('ActivityTemplate/activity/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
