{% extends 'BackOffice/base.html.twig' %}

{% block title %}Activités - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Activités</h1>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="q" value="{{ filters.q|default('') }}" class="form-control" placeholder="Recherche (titre/description)">
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="minPrice" value="{{ filters.minPrice is not null ? filters.minPrice : '' }}" class="form-control" placeholder="Prix min">
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="maxPrice" value="{{ filters.maxPrice is not null ? filters.maxPrice : '' }}" class="form-control" placeholder="Prix max">
        </div>
        <div class="col-md-2">
            <select name="available" class="form-select">
                <option value="">Tous</option>
                <option value="1" {% if filters.available is same as(true) %}selected{% endif %}>Disponible</option>
                <option value="0" {% if filters.available is same as(false) %}selected{% endif %}>Indisponible</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Durée</th>
                <th>Lieu</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.title }}</td>
                <td>{{ activity.price }} DT</td>
                <td>{{ activity.durationMinutes }} min</td>
                <td>{{ activity.location }}</td>
                <td>{{ activity.category ? activity.category.name : '–' }}</td>
                <td>
                    <a href="{{ path('app_activity_show', {'id': activity.id}) }}">Voir</a>
                    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">Aucune activité. Créez d'abord des catégories, puis des activités.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_new') }}" class="btn btn-success">Créer une activité</a>
</div>
{% endblock %}
