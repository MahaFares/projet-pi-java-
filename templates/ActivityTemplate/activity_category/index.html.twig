{% extends 'base.html.twig' %}

{% block title %}Catégories d'activité - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Catégories d'activité</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Icone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_category in activity_categories %}
            <tr>
                <td>{{ activity_category.id }}</td>
                <td>{{ activity_category.name }}</td>
                <td>{{ activity_category.description|default('–') }}</td>
                <td>{{ activity_category.icon|default('–') }}</td>
                <td>
                    <a href="{{ path('app_activity_category_show', {'id': activity_category.id}) }}">Voir</a>
                    <a href="{{ path('app_activity_category_edit', {'id': activity_category.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-muted">Aucune catégorie. Créez-en pour pouvoir créer des activités.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_category_new') }}" class="btn btn-success">Créer une catégorie</a>
</div>
{% endblock %}
