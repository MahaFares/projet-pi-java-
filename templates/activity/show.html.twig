{% extends 'base.html.twig' %}

{% block title %}{{ activity.title }} - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>{{ activity.title }}</h1>
    <table class="table">
        <tbody>
            <tr><th>Id</th><td>{{ activity.id }}</td></tr>
            <tr><th>Titre</th><td>{{ activity.title }}</td></tr>
            <tr><th>Description</th><td>{{ activity.description }}</td></tr>
            <tr><th>Prix</th><td>{{ activity.price }} €</td></tr>
            <tr><th>Durée (min)</th><td>{{ activity.durationMinutes }}</td></tr>
            <tr><th>Lieu</th><td>{{ activity.location }}</td></tr>
            <tr><th>Max participants</th><td>{{ activity.maxParticipants|default('–') }}</td></tr>
            <tr><th>Image</th><td>{{ activity.image|default('–') }}</td></tr>
            <tr><th>Actif</th><td>{{ activity.isActive ? 'Oui' : 'Non' }}</td></tr>
            <tr><th>Catégorie</th><td>{{ activity.category ? activity.category.name : '–' }}</td></tr>
            <tr><th>Guide</th><td>{{ activity.guide ? activity.guide.firstName ~ ' ' ~ activity.guide.lastName : '–' }}</td></tr>
        </tbody>
    </table>
    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}" class="btn btn-primary">Modifier</a>
    <a href="{{ path('app_activity_index') }}" class="btn btn-secondary">Retour à la liste</a>
    {{ include('activity/_delete_form.html.twig') }}
</div>
{% endblock %}
