<!DOCTYPE html>

<title>Activity</title>

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ activity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ activity.price }}</td>
            </tr>
            <tr>
                <th>DurationMinutes</th>
                <td>{{ activity.durationMinutes }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ activity.location }}</td>
            </tr>
            <tr>
                <th>MaxParticipants</th>
                <td>{{ activity.maxParticipants }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ activity.image }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ activity.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_index') }}">back to list</a>

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
