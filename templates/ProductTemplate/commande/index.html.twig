{% extends 'base.html.twig' %}

{% block title %}Commandes | Admin{% endblock %}

{% block body %}
<section class="breadcrumb_area">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Commandes</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li class="active">Commandes</li>
            </ol>
        </div>
    </div>
</section>

<section class="accomodation_area section_gap">
    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <p><a href="{{ path('app_commande_new') }}" class="btn theme_btn button_hover">Nouvelle commande</a></p>

        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Id user</th>
                        <th>Produit</th>
                        <th>Type</th>
                        <th>Quantité</th>
                        <th>Total</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for c in commandes %}
                    <tr>
                        <td>{{ c.idCommande }}</td>
                        <td>{{ c.idUser ?? '—' }}</td>
                        <td>{{ c.produit ? c.produit.nom : '—' }}</td>
                        <td>{{ c.typeCommande ? c.typeCommande.value : '—' }}</td>
                        <td>{{ c.quantite }}</td>
                        <td>{{ c.total }}</td>
                        <td>{{ c.dateCommande ? c.dateCommande|date('d/m/Y H:i') : '—' }}</td>
                        <td>{{ c.statutCommande }}</td>
                        <td>
                            <a href="{{ path('app_commande_show', { id: c.idCommande }) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_commande_edit', { id: c.idCommande }) }}" class="btn btn-sm btn-secondary">Modifier</a>
                            <form method="post" action="{{ path('app_commande_delete', { id: c.idCommande }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette commande ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_commande_' ~ c.idCommande) }}">
                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="9">Aucune commande.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
