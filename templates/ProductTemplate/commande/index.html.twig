{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tableBody = document.getElementById('commandesTableBody');
            const resultsCount = document.getElementById('resultsCount');
            const activeFiltersDiv = document.getElementById('activeFilters');
            const paginationContainer = document.getElementById('paginationContainer');

            // Input elements
            const filterProduit = document.getElementById('filterProduit');
            const minTotal = document.getElementById('minTotal');
            const maxTotal = document.getElementById('maxTotal');
            const dateFrom = document.getElementById('dateFrom');
            const dateTo = document.getElementById('dateTo');
            const clearFiltersBtn = document.getElementById('clearFilters');

            // Base URL
            const baseUrl = '{{ path('app_commande_index') }}'.replace(/\/$/, '');

            let currentPage = 1;

            // Debounce function
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }

            // Load commandes via AJAX
            function loadCommandes(page = 1) {
                currentPage = page;
                const params = new URLSearchParams();
                params.append('page', page);

                if (filterProduit.value) params.append('produit', filterProduit.value);
                if (minTotal.value) params.append('minTotal', minTotal.value);
                if (maxTotal.value) params.append('maxTotal', maxTotal.value);
                if (dateFrom.value) params.append('dateFrom', dateFrom.value);
                if (dateTo.value) params.append('dateTo', dateTo.value);

                fetch('{{ path('app_commande_search') }}?' + params.toString(), {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        displayCommandes(data.commandes);
                        updateResultsCount(data.total);
                        displayPagination(data.page, data.totalPages, data.total);
                        displayActiveFilters();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        tableBody.innerHTML = `
                <tr>
                    <td colspan="7" class="text-center text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        Erreur lors du chargement
                    </td>
                </tr>
            `;
                    });
            }

            // Display commandes
            function displayCommandes(commandes) {
                if (commandes.length === 0) {
                    tableBody.innerHTML = `
                <tr>
                    <td colspan="7">
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <h4>Aucune commande trouvÃ©e</h4>
                            <p>Essayez de modifier vos critÃ¨res de recherche.</p>
                        </div>
                    </td>
                </tr>
            `;
                    return;
                }

                tableBody.innerHTML = commandes.map(cmd => {
                    const showUrl = `${baseUrl}/${cmd.id}`;
                    const editUrl = `${baseUrl}/${cmd.id}/edit`;

                    return `
            <tr>
                <td>ðŸ‘¤ User ${cmd.idUser}</td>
                <td>ðŸ“¦ ${escapeHtml(cmd.produitNom)}</td>
                <td><strong>${cmd.quantite}</strong></td>
                <td>${parseFloat(cmd.prixUnitaire).toFixed(2)} DT</td>
                <td><span class="price-badge">${parseFloat(cmd.total).toFixed(2)} DT</span></td>
                <td>ðŸ“… ${cmd.dateCommande}</td>
                <td>
                    <div class="d-flex gap-1">
                        <a href="${showUrl}" class="action-btn btn-view" title="Voir">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="${editUrl}" class="action-btn btn-edit" title="Modifier">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button onclick="deleteCommande(${cmd.id})" class="action-btn btn-delete" title="Supprimer">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            `;
                }).join('');
            }

            // Update results count
            function updateResultsCount(total) {
                resultsCount.innerHTML = `
            <i class="bi bi-list-check"></i>
            <strong>${total}</strong> commande${total !== 1 ? 's' : ''} trouvÃ©e${total !== 1 ? 's' : ''}
        `;
            }

            // Display pagination
            function displayPagination(page, totalPages, total) {
                if (totalPages <= 1) {
                    paginationContainer.innerHTML = '';
                    return;
                }

                let html = `
            <button class="pagination-btn" onclick="loadPage(1)" ${page === 1 ? 'disabled' : ''}>
                <i class="bi bi-chevron-double-left"></i>
            </button>
            <button class="pagination-btn" onclick="loadPage(${page - 1})" ${page === 1 ? 'disabled' : ''}>
                <i class="bi bi-chevron-left"></i>
            </button>
        `;

                const startPage = Math.max(1, page - 2);
                const endPage = Math.min(totalPages, page + 2);

                for (let i = startPage; i <= endPage; i++) {
                    html += `
                <button class="pagination-btn ${i === page ? 'active' : ''}" onclick="loadPage(${i})">
                    ${i}
                </button>
            `;
                }

                html += `
            <button class="pagination-btn" onclick="loadPage(${page + 1})" ${page === totalPages ? 'disabled' : ''}>
                <i class="bi bi-chevron-right"></i>
            </button>
            <button class="pagination-btn" onclick="loadPage(${totalPages})" ${page === totalPages ? 'disabled' : ''}>
                <i class="bi bi-chevron-double-right"></i>
            </button>
        `;

                paginationContainer.innerHTML = html;
            }

            // Load specific page
            window.loadPage = function(page) {
                loadCommandes(page);
            };

            // Display active filters
            function displayActiveFilters() {
                const filters = [];

                if (filterProduit.value) {
                    const produitText = filterProduit.options[filterProduit.selectedIndex].text;
                    filters.push(`<span class="filter-badge"><i class="bi bi-box"></i> ${escapeHtml(produitText)}</span>`);
                }
                if (minTotal.value) {
                    filters.push(`<span class="filter-badge"><i class="bi bi-currency-dollar"></i> Min: ${minTotal.value} DT</span>`);
                }
                if (maxTotal.value) {
                    filters.push(`<span class="filter-badge"><i class="bi bi-currency-dollar"></i> Max: ${maxTotal.value} DT</span>`);
                }
                if (dateFrom.value) {
                    filters.push(`<span class="filter-badge"><i class="bi bi-calendar"></i> Depuis: ${dateFrom.value}</span>`);
                }
                if (dateTo.value) {
                    filters.push(`<span class="filter-badge"><i class="bi bi-calendar"></i> Jusqu'Ã : ${dateTo.value}</span>`);
                }

                if (filters.length > 0) {
                    activeFiltersDiv.innerHTML = `
                <div class="mt-2">
                    <small class="text-muted">Filtres actifs:</small> ${filters.join(' ')}
                </div>
            `;
                } else {
                    activeFiltersDiv.innerHTML = '';
                }
            }

            // Escape HTML
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Delete commande
            window.deleteCommande = function(id) {
                if (!confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette commande ?')) {
                    return;
                }

                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `${baseUrl}/${id}/delete`;

                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '_token';
                csrfInput.value = '{{ csrf_token("delete_commande_") }}' + id;
                form.appendChild(csrfInput);

                document.body.appendChild(form);
                form.submit();
            };

            // Clear filters
            clearFiltersBtn.addEventListener('click', function() {
                filterProduit.value = '';
                minTotal.value = '';
                maxTotal.value = '';
                dateFrom.value = '';
                dateTo.value = '';
                loadCommandes(1);
            });

            // Event listeners
            const debouncedLoad = debounce(() => loadCommandes(1), 500);
            minTotal.addEventListener('input', debouncedLoad);
            maxTotal.addEventListener('input', debouncedLoad);

            filterProduit.addEventListener('change', () => loadCommandes(1));
            dateFrom.addEventListener('change', () => loadCommandes(1));
            dateTo.addEventListener('change', () => loadCommandes(1));

            // Initial load
            loadCommandes(1);
        });
    </script>
{% endblock %}
