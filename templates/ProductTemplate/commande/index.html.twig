{% extends 'BackOffice/base.html.twig' %}

{% block title %}Commandes - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Commandes</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Statut</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c in commandes %}
            <tr>
                <td>{{ c.idCommande }}</td>
                <td>{{ c.idUser ?? '–' }}</td>
                <td>{{ c.produit ? c.produit.nom : '–' }}</td>
                <td>{{ c.quantite }}</td>
                <td>{{ c.total }}</td>
                <td>{{ c.statutCommande }}</td>
                <td>{{ c.dateCommande ? c.dateCommande|date('d/m/Y') : '–' }}</td>
                <td>
                    <a href="{{ path('app_commande_show', { id: c.idCommande }) }}">Voir</a>
                    <a href="{{ path('app_commande_edit', { id: c.idCommande }) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-muted">Aucune commande.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commande_new') }}" class="btn btn-success">Créer une commande</a>
</div>
{% endblock %}
