{% extends 'base.html.twig' %}

{% block title %}Nouvelle commande | Admin{% endblock %}

{% block body %}
<section class="breadcrumb_area">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Nouvelle commande</h2>
            <ol class="breadcrumb">
                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                <li><a href="{{ path('app_commande_index') }}">Commandes</a></li>
                <li class="active">Nouvelle</li>
            </ol>
        </div>
    </div>
</section>

<section class="accomodation_area section_gap">
    <div class="container">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
        {{ form_row(form.produit) }}
        {{ form_row(form.typeCommande) }}
        {{ form_row(form.quantite) }}
        {{ form_row(form.prixUnitaire) }}
        {{ form_row(form.total) }}
        {{ form_row(form.dateCommande) }}
        {{ form_row(form.statutCommande) }}
        <button type="submit" class="btn theme_btn button_hover">Enregistrer</button>
        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">Annuler</a>
        {{ form_end(form) }}
    </div>
</section>
{% endblock %}
