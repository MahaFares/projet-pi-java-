{% extends 'BackOffice/base.html.twig' %}

{% block title %}Catégories - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Catégories</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for c in categories %}
            <tr>
                <td>{{ c.idCategorie }}</td>
                <td>{{ c.nom }}</td>
                <td>{{ (c.description|default(''))|slice(0, 80) }}{% if c.description|default('')|length > 80 %}...{% endif %}</td>
                <td>
                    <a href="{{ path('app_categorie_show', { id: c.idCategorie }) }}">Voir</a>
                    <a href="{{ path('app_categorie_edit', { id: c.idCategorie }) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" class="text-muted">Aucune catégorie.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}" class="btn btn-success">Créer une catégorie</a>
</div>
{% endblock %}
