        <!-- Categories Table -->
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Produits</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody id="categoriesTableBody">
                    <!-- Content loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            const tableBody = document.getElementById('categoriesTableBody');
            const resultsCount = document.getElementById('resultsCount');
            const activeFiltersDiv = document.getElementById('activeFilters');

            // Input elements
            const searchQuery = document.getElementById('searchQuery');
            const filterType = document.getElementById('filterType');
            const clearFiltersBtn = document.getElementById('clearFilters');

            // Base URL for routes
            const baseUrl = '{{ path('app_categorie_index') }}'.replace(/\/$/, '');

            // Debounce function
            function debounce(func, wait) {
                let timeout;
                return function executedFunction(...args) {
                    const later = () => {
                        clearTimeout(timeout);
                        func(...args);
                    };
                    clearTimeout(timeout);
                    timeout = setTimeout(later, wait);
                };
            }

            // Load categories via AJAX
            function loadCategories() {
                const params = new URLSearchParams();
                if (searchQuery.value) params.append('q', searchQuery.value);
                if (filterType.value) params.append('type', filterType.value);

                fetch('{{ path('app_categorie_search') }}?' + params.toString(), {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        displayCategories(data.categories);
                        updateResultsCount(data.count);
                        displayActiveFilters();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        tableBody.innerHTML = `
                <tr>
                    <td colspan="5" class="text-center text-danger">
                        <i class="bi bi-exclamation-triangle"></i>
                        Erreur lors du chargement des cat√©gories
                    </td>
                </tr>
            `;
                    });
            }

            // Display categories in table
            function displayCategories(categories) {
                if (categories.length === 0) {
                    tableBody.innerHTML = `
                <tr>
                    <td colspan="5">
                        <div class="empty-state">
                            <i class="bi bi-inbox"></i>
                            <h4>Aucune cat√©gorie trouv√©e</h4>
                            <p>Essayez de modifier vos crit√®res de recherche ou cr√©ez une nouvelle cat√©gorie.</p>
                        </div>
                    </td>
                </tr>
            `;
                    return;
                }

                tableBody.innerHTML = categories.map(categorie => {
                    const showUrl = `${baseUrl}/${categorie.id}`;
                    const editUrl = `${baseUrl}/${categorie.id}/edit`;

                    const badgeClass = categorie.nom === 'A louer' ? 'badge-louer' : 'badge-vendre';
                    const badgeIcon = categorie.nom === 'A louer' ? 'üè†' : 'üí∞';

                    return `
            <tr>
                <td><strong>#${categorie.id}</strong></td>
                <td>
                    <span class="badge-type ${badgeClass}">
                        ${badgeIcon} ${escapeHtml(categorie.nom)}
                    </span>
                </td>
                <td>
                    ${categorie.description
                        ? escapeHtml(categorie.description.substring(0, 100)) + (categorie.description.length > 100 ? '...' : '')
                        : '<span class="text-muted">Aucune description</span>'}
                </td>
                <td>
                    <span class="produits-count">
                        üì¶ ${categorie.produitsCount} produit${categorie.produitsCount !== 1 ? 's' : ''}
                    </span>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a href="${showUrl}" class="action-btn btn-view" title="Voir">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="${editUrl}" class="action-btn btn-edit" title="Modifier">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <button onclick="deleteCategorie(${categorie.id})" class="action-btn btn-delete" title="Supprimer">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
            `;
                }).join('');
            }

            // Update results count
            function updateResultsCount(count) {
                resultsCount.innerHTML = `
            <i class="bi bi-list-check"></i>
            <strong>${count}</strong> cat√©gorie${count !== 1 ? 's' : ''} trouv√©e${count !== 1 ? 's' : ''}
        `;
            }

            // Display active filters
            function displayActiveFilters() {
                const filters = [];

                if (searchQuery.value) {
                    filters.push(`<span class="filter-badge"><i class="bi bi-search"></i> "${escapeHtml(searchQuery.value)}"</span>`);
                }
                if (filterType.value) {
                    const typeLabel = filterType.value === 'A louer' ? 'üè† √Ä Louer' : 'üí∞ √Ä Vendre';
                    filters.push(`<span class="filter-badge"><i class="bi bi-funnel"></i> ${typeLabel}</span>`);
                }

                if (filters.length > 0) {
                    activeFiltersDiv.innerHTML = `
                <div class="mt-2">
                    <small class="text-muted">Filtres actifs:</small> ${filters.join(' ')}
                </div>
            `;
                } else {
                    activeFiltersDiv.innerHTML = '';
                }
            }

            // Escape HTML
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Delete category
            window.deleteCategorie = function(id) {
                if (!confirm('√ätes-vous s√ªr de vouloir supprimer cette cat√©gorie ?')) {
                    return;
                }

                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `${baseUrl}/${id}/delete`;

                const csrfInput = document.createElement('input');
                csrfInput.type = 'hidden';
                csrfInput.name = '_token';
                csrfInput.value = '{{ csrf_token("delete_categorie_") }}' + id;
                form.appendChild(csrfInput);

                document.body.appendChild(form);
                form.submit();
            };

            // Clear all filters
            clearFiltersBtn.addEventListener('click', function() {
                searchQuery.value = '';
                filterType.value = '';
                loadCategories();
            });

            // Event listeners
            const debouncedLoad = debounce(loadCategories, 500);
            searchQuery.addEventListener('input', debouncedLoad);
            filterType.addEventListener('change', loadCategories);

            // Initial load
            loadCategories();
        });
    </script>
{% endblock %}
