                            <i class="bi bi-x-circle"></i> R√©initialiser
                        </button>
                    </div>
                </div>

                <!-- Active Filters Display -->
                <div id="activeFilters" class="mt-3"></div>
            </form>
        </div>

        <!-- Results Count -->
