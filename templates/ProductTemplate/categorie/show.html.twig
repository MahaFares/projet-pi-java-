{% extends 'BackOffice/base.html.twig' %}

{% block title %}{{ categorie.nom }} - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>{{ categorie.nom }}</h1>

    <div class="row mt-4">
        <div class="col-md-8">
            <h3>Détails</h3>
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">{{ categorie.idCategorie }}</dd>
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">{{ categorie.nom }}</dd>
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">{{ categorie.description|default('–') }}</dd>
            </dl>
        </div>
        <div class="col-md-4">
            <h3>Actions</h3>
            <a href="{{ path('app_categorie_edit', { id: categorie.idCategorie }) }}" class="btn btn-warning d-block mb-2">Modifier</a>
            <form method="post" action="{{ path('app_categorie_delete', { id: categorie.idCategorie }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_categorie_' ~ categorie.idCategorie) }}">
                <button type="submit" class="btn btn-danger d-block mb-2 w-100">Supprimer</button>
            </form>
        </div>
    </div>

    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %}
