{% extends 'BackOffice/base.html.twig' %}

{% block title %}Nouvelle catégorie - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}
    <h1>Créer une catégorie</h1>
    
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div class="form-group mb-3">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-success">Créer la catégorie</button>
        </div>
    {{ form_end(form) }}
    
    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary mt-2">Retour à la liste</a>
</div>
{% endblock %}
