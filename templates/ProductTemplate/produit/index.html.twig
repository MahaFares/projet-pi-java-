{% extends 'BackOffice/base.html.twig' %}

{% block title %}Produits - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Produits</h1>

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="q" value="{{ filters.q|default('') }}" class="form-control" placeholder="Recherche (nom)">
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="minPrice" value="{{ filters.minPrice is not null ? filters.minPrice : '' }}" class="form-control" placeholder="Prix min">
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="maxPrice" value="{{ filters.maxPrice is not null ? filters.maxPrice : '' }}" class="form-control" placeholder="Prix max">
        </div>
        <div class="col-md-2">
            <select name="available" class="form-select">
                <option value="">Tous</option>
                <option value="1" {% if filters.available is same as(true) %}selected{% endif %}>En stock</option>
                <option value="0" {% if filters.available is same as(false) %}selected{% endif %}>Rupture</option>
            </select>
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for p in produits %}
            <tr>
                <td>{{ p.idProduit }}</td>
                <td>{{ p.nom }}</td>
                <td>{{ p.prix }} EUR</td>
                <td>{{ p.stock }}</td>
                <td>{{ p.categorie ? p.categorie.nom : '–' }}</td>
                <td>
                    <a href="{{ path('app_produit_show', { id: p.idProduit }) }}">Voir</a>
                    <a href="{{ path('app_produit_edit', { id: p.idProduit }) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-muted">Aucun produit.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}" class="btn btn-success">Créer un produit</a>
</div>
{% endblock %}
