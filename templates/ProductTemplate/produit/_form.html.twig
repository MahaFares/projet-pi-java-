{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-group mb-3">
        {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.nom) }}
        {% if form.nom.vars.help %}
            <small class="form-text text-muted d-block mt-1">{{ form.nom.vars.help }}</small>
        {% endif %}
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.prix, 'Prix (EUR)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
                {% if form.prix.vars.help %}
                    <small class="form-text text-muted d-block mt-1">{{ form.prix.vars.help }}</small>
                {% endif %}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group mb-3">
                {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.stock) }}
                {% if form.stock.vars.help %}
                    <small class="form-text text-muted d-block mt-1">{{ form.stock.vars.help }}</small>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.image, 'Image (URL)', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.image) }}
        {% if form.image.vars.help %}
            <small class="form-text text-muted d-block mt-1">{{ form.image.vars.help }}</small>
        {% endif %}
    </div>

    <div class="form-group mb-3">
        {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.categorie) }}
        {% if form.categorie.vars.help %}
            <small class="form-text text-muted d-block mt-1">{{ form.categorie.vars.help }}</small>
        {% endif %}
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">
            {% if form.vars.data and form.vars.data.id %}
                Mettre à jour
            {% else %}
                Créer le produit
            {% endif %}
        </button>
    </div>
{{ form_end(form) }}
