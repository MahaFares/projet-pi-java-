{% extends 'BackOffice/base.html.twig' %}

{% block title %}Modifier paiement #{{ paiement.idPaiement }} - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Modifier le paiement #{{ paiement.idPaiement }}</h1>

    {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.commande, 'Commande', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.commande, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.commande) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.montant, 'Montant', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.montant, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.montant) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.methodePaiement, 'Méthode de paiement', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.methodePaiement, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.methodePaiement) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.statutPaiement, 'Statut', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.statutPaiement, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.statutPaiement) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.datePaiement, 'Date de paiement', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.datePaiement, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.datePaiement) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    {{ form_label(form.referencePaiement, 'Référence', { label_attr: { class: 'form-label' } }) }}
                    {{ form_widget(form.referencePaiement, { attr: { class: 'form-control' } }) }}
                    {{ form_errors(form.referencePaiement) }}
                </div>
            </div>
        </div>

        {{ form_rest(form) }}
        <button type="submit" class="btn btn-warning">Modifier</button>
    {{ form_end(form) }}

    <a href="{{ path('app_paiement_show', { id: paiement.idPaiement }) }}" class="btn btn-secondary mt-3">Retour</a>
</div>
{% endblock %}
