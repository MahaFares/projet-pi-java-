{% extends 'BackOffice/base.html.twig' %}

{% block title %}Paiements - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Paiements</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commande</th>
                <th>Montant</th>
                <th>Méthode</th>
                <th>Statut</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for p in paiements %}
            <tr>
                <td>{{ p.idPaiement }}</td>
                <td>#{{ p.commande ? p.commande.idCommande : '–' }}</td>
                <td>{{ p.montant }}</td>
                <td>{{ p.methodePaiement }}</td>
                <td>{{ p.statutPaiement }}</td>
                <td>{{ p.datePaiement ? p.datePaiement|date('d/m/Y') : '–' }}</td>
                <td>
                    <a href="{{ path('app_paiement_show', { id: p.idPaiement }) }}">Voir</a>
                    <a href="{{ path('app_paiement_edit', { id: p.idPaiement }) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7" class="text-muted">Aucun paiement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_paiement_new') }}" class="btn btn-success">Créer un paiement</a>
</div>
{% endblock %}
