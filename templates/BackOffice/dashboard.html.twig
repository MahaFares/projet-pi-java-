{% extends 'BackOffice/base.html.twig' %}

{% block title %}Dashboard | EcoTrip Admin{% endblock %}
{% block page_title %}Dashboard — Vue d'ensemble{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<style>
@keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}
@keyframes scaleIn {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
}
@keyframes shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
}

.dash-board { font-family: 'Plus Jakarta Sans', sans-serif; }

.dash-hero {
    background: linear-gradient(135deg, #0d3d18 0%, #1a5f2a 40%, #2d8a3e 100%);
    border-radius: 24px;
    padding: 32px 40px;
    margin-bottom: 32px;
    color: white;
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.6s ease-out;
}
.dash-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -15%;
    width: 50%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.12) 0%, transparent 60%);
}
.dash-hero h2 { font-size: 1.75rem; font-weight: 700; margin: 0 0 6px 0; letter-spacing: -0.02em; }
.dash-hero p { margin: 0; opacity: 0.9; font-size: 0.95rem; }

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}
.stat-card {
    background: white;
    border-radius: 20px;
    padding: 24px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    border: 1px solid rgba(0,0,0,0.04);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.5s ease-out backwards;
}
.stat-card:nth-child(1) { animation-delay: 0.05s; }
.stat-card:nth-child(2) { animation-delay: 0.1s; }
.stat-card:nth-child(3) { animation-delay: 0.15s; }
.stat-card:nth-child(4) { animation-delay: 0.2s; }
.stat-card:nth-child(5) { animation-delay: 0.25s; }
.stat-card:nth-child(6) { animation-delay: 0.3s; }
.stat-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
}
.stat-card .icon-wrap {
    width: 52px;
    height: 52px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 22px;
    margin-bottom: 16px;
}
.stat-card.green .icon-wrap { background: linear-gradient(135deg, #dcfce7, #bbf7d0); color: #16a34a; }
.stat-card.blue .icon-wrap { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #2563eb; }
.stat-card.orange .icon-wrap { background: linear-gradient(135deg, #ffedd5, #fed7aa); color: #ea580c; }
.stat-card.purple .icon-wrap { background: linear-gradient(135deg, #f3e8ff, #e9d5ff); color: #7c3aed; }
.stat-card.red .icon-wrap { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #dc2626; }
.stat-card.teal .icon-wrap { background: linear-gradient(135deg, #ccfbf1, #99f6e4); color: #0d9488; }
.stat-card h3 { font-size: 2rem; font-weight: 800; margin: 0 0 4px 0; letter-spacing: -0.03em; color: #0f172a; }
.stat-card p { margin: 0; font-size: 0.875rem; color: #64748b; font-weight: 500; }

/* Module Sections */
.module-block {
    background: white;
    border-radius: 24px;
    padding: 28px 32px;
    margin-bottom: 28px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.06);
    border: 1px solid rgba(0,0,0,0.04);
    overflow: hidden;
    animation: fadeInUp 0.5s ease-out;
}

.module-head {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    padding-bottom: 20px;
    border-bottom: 1px solid #f1f5f9;
}
.module-head .icon {
    width: 48px;
    height: 48px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
}
.module-head.activity .icon { background: linear-gradient(135deg, #dcfce7, #bbf7d0); color: #16a34a; }
.module-head.hebergement .icon { background: linear-gradient(135deg, #dbeafe, #bfdbfe); color: #2563eb; }
.module-head.transport .icon { background: linear-gradient(135deg, #ffedd5, #fed7aa); color: #ea580c; }
.module-head.boutique .icon { background: linear-gradient(135deg, #fee2e2, #fecaca); color: #dc2626; }
.module-head h4 { font-size: 1.25rem; font-weight: 700; margin: 0; color: #0f172a; letter-spacing: -0.02em; }

.module-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px;
    margin-bottom: 24px;
}
.module-stat {
    background: #f8fafc;
    border-radius: 16px;
    padding: 20px;
    transition: all 0.3s ease;
}
.module-stat:hover { background: #f1f5f9; transform: translateY(-2px); }
.module-stat .icon { font-size: 24px; margin-bottom: 8px; opacity: 0.9; }
.module-stat h5 { font-size: 1.5rem; font-weight: 700; margin: 0 0 4px 0; color: #0f172a; }
.module-stat span { font-size: 0.8rem; color: #64748b; }
.module-stat a { font-size: 0.85rem; font-weight: 600; color: #16a34a; text-decoration: none; margin-top: 8px; display: inline-block; }
.module-stat a:hover { text-decoration: underline; }

/* Content Row */
.module-content { display: grid; grid-template-columns: 1fr 1fr; gap: 24px; }
@media (max-width: 991px) { .module-content { grid-template-columns: 1fr; } }

.panel-card {
    background: #f8fafc;
    border-radius: 16px;
    padding: 24px;
    border: 1px solid #e2e8f0;
}
.panel-card h5 {
    font-size: 0.95rem;
    font-weight: 600;
    color: #0f172a;
    margin: 0 0 16px 0;
    display: flex;
    align-items: center;
    gap: 8px;
}

/* Activity List Items */
.recent-item {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 14px 0;
    border-bottom: 1px solid #e2e8f0;
    transition: background 0.2s;
}
.recent-item:last-child { border-bottom: none; padding-bottom: 0; }
.recent-item:hover { background: rgba(255,255,255,0.6); border-radius: 12px; margin: 0 -8px; padding: 14px 8px; }
.recent-item img {
    width: 56px;
    height: 56px;
    object-fit: cover;
    border-radius: 12px;
}
.recent-item .info { flex: 1; }
.recent-item .info strong { font-size: 0.95rem; color: #0f172a; }
.recent-item .info small { color: #64748b; font-size: 0.8rem; }
.badge-modern {
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
}
.badge-modern.success { background: #dcfce7; color: #166534; }
.badge-modern.warning { background: #fef3c7; color: #92400e; }

/* Action Buttons */
.action-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
}
.action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 14px 16px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: none;
}
.action-btn.primary { background: linear-gradient(135deg, #16a34a, #22c55e); color: white; }
.action-btn.secondary { background: white; color: #475569; border: 1.5px solid #e2e8f0; }
.action-btn.warning { background: linear-gradient(135deg, #ea580c, #f97316); color: white; }
.action-btn.info { background: linear-gradient(135deg, #2563eb, #3b82f6); color: white; }
.action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.quick-actions { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px; }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid dash-board">
    <div class="dash-hero">
        <h2>Vue d'ensemble</h2>
        <p>Bienvenue sur le tableau de bord EcoTrip — gérez vos activités, hébergements, transports et boutique.</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card green">
            <div class="icon-wrap"><i class="fa fa-calendar"></i></div>
            <h3>{{ totalActivities ?? 0 }}</h3>
            <p>Activités</p>
        </div>
        <div class="stat-card blue">
            <div class="icon-wrap"><i class="fa fa-building"></i></div>
            <h3>0</h3>
            <p>Hébergements</p>
        </div>
        <div class="stat-card orange">
            <div class="icon-wrap"><i class="fa fa-bus"></i></div>
            <h3>{{ totalTransports ?? 0 }}</h3>
            <p>Transports</p>
        </div>
        <div class="stat-card red">
            <div class="icon-wrap"><i class="fa fa-shopping-bag"></i></div>
            <h3>0</h3>
            <p>Produits</p>
        </div>
        <div class="stat-card purple">
            <div class="icon-wrap"><i class="fa fa-users"></i></div>
            <h3>0</h3>
            <p>Utilisateurs</p>
        </div>
        <div class="stat-card teal">
            <div class="icon-wrap"><i class="fa fa-shopping-cart"></i></div>
            <h3>0</h3>
            <p>Réservations</p>
        </div>
    </div>

    {# ACTIVITÉS #}
    <div class="module-block activity">
        <div class="module-head activity">
            <div class="icon"><i class="fa fa-calendar"></i></div>
            <h4>Module Activités</h4>
        </div>
        <div class="module-stats">
            <div class="module-stat">
                <div class="icon" style="color:#16a34a"><i class="fa fa-calendar"></i></div>
                <h5>{{ totalActivities ?? 0 }}</h5>
                <span>Total Activités</span>
                <a href="{{ path('app_activity_index') }}">Voir tout →</a>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#2563eb"><i class="fa fa-check-circle"></i></div>
                <h5>{{ activeActivities ?? 0 }}</h5>
                <span>Activités Actives</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#ea580c"><i class="fa fa-tags"></i></div>
                <h5>{{ totalCategories ?? 0 }}</h5>
                <span>Catégories</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#7c3aed"><i class="fa fa-user"></i></div>
                <h5>{{ totalGuides ?? 0 }}</h5>
                <span>Guides</span>
            </div>
        </div>
        <div class="module-content">
            <div class="panel-card">
                <h5><i class="fa fa-clock-o"></i> Activités Récentes</h5>
                {% if recentActivities is defined and recentActivities is not empty %}
                    {% for activity in recentActivities|slice(0, 3) %}
                        <div class="recent-item">
                            {% if activity.image %}
                                <img src="{{ asset(activity.image) }}" alt="{{ activity.title }}">
                            {% else %}
                                <img src="{{ asset('images/default-activity.jpg') }}" alt="{{ activity.title }}" onerror="this.src='{{ asset('images/room1.jpg') }}'">
                            {% endif %}
                            <div class="info">
                                <strong>{{ activity.title }}</strong><br>
                                <small>{{ activity.location }} • {{ activity.price }} TND</small>
                            </div>
                            {% if activity.isActive %}
                                <span class="badge-modern success">Actif</span>
                            {% endif %}
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-muted mb-0">Aucune activité</p>
                {% endif %}
            </div>
            <div class="panel-card">
                <h5><i class="fa fa-bolt"></i> Actions Rapides</h5>
                <div class="action-grid">
                    <a href="{{ path('app_activity_new') }}" class="action-btn primary"><i class="fa fa-plus"></i> Nouvelle Activité</a>
                    <a href="{{ path('app_activity_category_new') }}" class="action-btn warning"><i class="fa fa-tag"></i> Nouvelle Catégorie</a>
                    <a href="{{ path('app_activity_schedule_new') }}" class="action-btn info"><i class="fa fa-calendar"></i> Nouvel Horaire</a>
                    <a href="{{ path('app_guide_new') }}" class="action-btn secondary"><i class="fa fa-user-plus"></i> Nouveau Guide</a>
                </div>
            </div>
        </div>
    </div>

    {# HÉBERGEMENT #}
    <div class="module-block hebergement">
        <div class="module-head hebergement">
            <div class="icon"><i class="fa fa-building"></i></div>
            <h4>Module Hébergement</h4>
        </div>
        <div class="module-stats">
            <div class="module-stat">
                <div class="icon" style="color:#2563eb"><i class="fa fa-building"></i></div>
                <h5>0</h5>
                <span>Total Hébergements</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#16a34a"><i class="fa fa-home"></i></div>
                <h5>0</h5>
                <span>Chambres</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#ea580c"><i class="fa fa-cog"></i></div>
                <h5>0</h5>
                <span>Équipements</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#7c3aed"><i class="fa fa-tags"></i></div>
                <h5>0</h5>
                <span>Catégories</span>
            </div>
        </div>
        <div class="quick-actions">
            <a href="{{ path('app_hebergement_new') }}" class="action-btn primary"><i class="fa fa-plus"></i> Nouvel Hébergement</a>
            <a href="{{ path('app_chambre_new') }}" class="action-btn warning"><i class="fa fa-home"></i> Nouvelle Chambre</a>
            <a href="{{ path('app_equipement_new') }}" class="action-btn info"><i class="fa fa-cog"></i> Nouvel Équipement</a>
            <a href="{{ path('app_categorie_hebergement_new') }}" class="action-btn secondary"><i class="fa fa-tag"></i> Nouvelle Catégorie</a>
        </div>
    </div>

    {# TRANSPORT #}
    <div class="module-block transport">
        <div class="module-head transport">
            <div class="icon"><i class="fa fa-bus"></i></div>
            <h4>Module Transport</h4>
        </div>
        <div class="module-stats">
            <div class="module-stat">
                <div class="icon" style="color:#ea580c"><i class="fa fa-bus"></i></div>
                <h5>{{ totalTransports ?? 0 }}</h5>
                <span>Total Transports</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#7c3aed"><i class="fa fa-tags"></i></div>
                <h5>{{ totalTransportCategories ?? 0 }}</h5>
                <span>Catégories</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#2563eb"><i class="fa fa-user"></i></div>
                <h5>{{ totalChauffeurs ?? 0 }}</h5>
                <span>Chauffeurs</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#16a34a"><i class="fa fa-map"></i></div>
                <h5>{{ totalTrajets ?? 0 }}</h5>
                <span>Trajets</span>
            </div>
        </div>
        <div class="quick-actions">
            <a href="{{ path('app_transport_new') }}" class="action-btn primary"><i class="fa fa-plus"></i> Nouveau Transport</a>
            <a href="{{ path('app_transport_category_new') }}" class="action-btn warning"><i class="fa fa-tag"></i> Nouvelle Catégorie</a>
            <a href="{{ path('app_chauffeur_new') }}" class="action-btn info"><i class="fa fa-user-plus"></i> Nouveau Chauffeur</a>
            <a href="{{ path('app_trajet_new') }}" class="action-btn secondary"><i class="fa fa-map"></i> Nouveau Trajet</a>
            <a href="{{ path('app_transport_index') }}" class="action-btn secondary"><i class="fa fa-list"></i> Voir Transports</a>
        </div>
    </div>

    {# BOUTIQUE #}
    <div class="module-block boutique">
        <div class="module-head boutique">
            <div class="icon"><i class="fa fa-shopping-bag"></i></div>
            <h4>Module Boutique</h4>
        </div>
        <div class="module-stats">
            <div class="module-stat">
                <div class="icon" style="color:#dc2626"><i class="fa fa-shopping-bag"></i></div>
                <h5>0</h5>
                <span>Total Produits</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#7c3aed"><i class="fa fa-tags"></i></div>
                <h5>0</h5>
                <span>Catégories</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#2563eb"><i class="fa fa-shopping-cart"></i></div>
                <h5>0</h5>
                <span>Commandes</span>
            </div>
            <div class="module-stat">
                <div class="icon" style="color:#16a34a"><i class="fa fa-credit-card"></i></div>
                <h5>0</h5>
                <span>Paiements</span>
            </div>
        </div>
        <div class="quick-actions">
            <a href="{{ path('app_produit_new') }}" class="action-btn primary"><i class="fa fa-plus"></i> Nouveau Produit</a>
            <a href="{{ path('app_categorie_new') }}" class="action-btn warning"><i class="fa fa-tag"></i> Nouvelle Catégorie</a>
            <a href="{{ path('app_commande_index') }}" class="action-btn info"><i class="fa fa-shopping-cart"></i> Commandes</a>
            <a href="{{ path('app_paiement_index') }}" class="action-btn secondary"><i class="fa fa-credit-card"></i> Paiements</a>
        </div>
    </div>
</div>
{% endblock %}
