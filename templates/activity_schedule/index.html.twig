{% extends 'base.html.twig' %}

{% block title %}Horaires d'activité - Admin{% endblock %}

{% block body %}
<div class="container py-4">
    {{ include('admin_nav.html.twig') }}

    <h1>Horaires d'activité</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Activité</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Places</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_schedule in activity_schedules %}
            <tr>
                <td>{{ activity_schedule.id }}</td>
                <td>{{ activity_schedule.activity ? activity_schedule.activity.title : '–' }}</td>
                <td>{{ activity_schedule.startAt ? activity_schedule.startAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ activity_schedule.endAt ? activity_schedule.endAt|date('d/m/Y H:i') : '' }}</td>
                <td>{{ activity_schedule.availableSpots }}</td>
                <td>
                    <a href="{{ path('app_activity_schedule_show', {'id': activity_schedule.id}) }}">Voir</a>
                    <a href="{{ path('app_activity_schedule_edit', {'id': activity_schedule.id}) }}" class="ms-2">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-muted">Aucun horaire. Créez d'abord des activités, puis des créneaux horaires.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_schedule_new') }}" class="btn btn-success">Créer un horaire</a>
</div>
{% endblock %}
