<!DOCTYPE html>

<title>ActivitySchedule index</title>

{% block body %}
    <h1>ActivitySchedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartAt</th>
                <th>EndAt</th>
                <th>AvailableSpots</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity_schedule in activity_schedules %}
            <tr>
                <td>{{ activity_schedule.id }}</td>
                <td>{{ activity_schedule.startAt ? activity_schedule.startAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity_schedule.endAt ? activity_schedule.endAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ activity_schedule.availableSpots }}</td>
                <td>
                    <a href="{{ path('app_activity_schedule_show', {'id': activity_schedule.id}) }}">show</a>
                    <a href="{{ path('app_activity_schedule_edit', {'id': activity_schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activity_schedule_new') }}">Create new</a>
{% endblock %}
